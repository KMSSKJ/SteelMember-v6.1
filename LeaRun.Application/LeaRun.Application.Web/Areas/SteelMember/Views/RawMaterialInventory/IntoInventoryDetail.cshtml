    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('WarehouseId');
        if (keyValue) {
            $.RemoveForm({
                url: '../../SteelMember/RawMaterialWarehouse/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的构件库存！', 0);
        }
    }

    //导出
    function btn_derive() {
        dialogOpen({
            id: "ExcelIExportDialog",
            title: '导出Excel数据',
            url: '/Utility/ExcelExportForm?gridId=' + "gridTable" + "&filename=" + escape("材料入库表"),
            width: "500px",
            height: "380px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }, btn: ['导出Excel', '关闭']
        });
    }

    function Search() {
        dialogOpen({
            id: "AdvancedSearchForm",
            title: '高级查询',
            url: '/Utility/AdvancedSearchForm?SubProjectId=' + _Category,
            width: "670px",
            height: "180px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            },
            btn: null,
        });
    }

