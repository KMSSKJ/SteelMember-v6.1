        //    description: "选择材料类型",
        //}).bind("change", function () {
        //    $('#btn_Search').trigger("click");
        //});

        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 170,
            url: "../../SteelMember/RawMaterialWarehouse/IntoInventoryDetailInfo",
            datatype: "json",
            colModel: [
                { label: '入库ID', name: 'WarehouseId', index: 'WarehouseId', hidden: true },
                { label: '材料名称', name: 'RawMaterialName', index: 'Category', width:180, align: 'center', sortable: true },
                { label: '规格/型号', name: 'RawMaterialModel', index: 'RawMaterialModel', width: 180, align: 'center', sortable: false },
                { label: '入库数量', name: 'WarehouseQuantity', index: 'WarehouseQuantity', width: 120, align: 'center', sortable: true },
                { label: '单位', name: 'Unit', index: 'Unit', width: 80, align: 'center', sortable: false },
                {
                    label: '入库时间', name: 'WarehouseTime', index: 'WarehouseTime', width: 100, align: 'center', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return formatDate(cellvalue, 'yyyy-MM-dd');//'yyyy-MM-dd hh:mm:ss'
                    }
                },
                { label: '描述', name: 'Description', index: 'Description', width: 200, align: 'center', sortable: false },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'WarehouseId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                //Category: Category = $("#Category").attr('data-text') == "选择材料类型" ? "" : $("#Category").attr('data-text'),
                //SubProject: SubProject,
                //SubProjectId: SubProjectId,
                //HavesChildren: HavesChildren,
                keyword: $("#txt_Keyword").val(),
                BeginTime: $("#txt_BeginTime").val(),
                EndTime: $("#txt_EndTime").val()
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');
        });

        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });

        switch (obj) {
            case 'Search':
                $('#btn_Search').trigger("click");
                break;
        }
    }

