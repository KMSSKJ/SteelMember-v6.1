    //            top.frames[iframeId].AcceptClick();
    //        },
    //    });
    //}

    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('WarehouseId');
        if (keyValue) {
            $.RemoveForm({
                url: '../../SteelMember/RawMaterialWarehouse/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的构件库存！', 0);
        }
    }

    //导出
    function btn_derive() {
        dialogOpen({
            id: "ExcelIExportDialog",
            title: '导出Excel数据',
            url: '/Utility/ExcelExportForm?gridId=' + "gridTable" + "&filename=" + escape("材料入库表"),
            width: "500px",
            height: "380px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }, btn: ['导出Excel', '关闭']
        });
    }

    function Search() {
        dialogOpen({
            id: "AdvancedSearchForm",
            title: '高级查询',
            url: '/Utility/AdvancedSearchForm?SubProjectId=' + _Category,
            width: "670px",
            height: "180px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            },
            btn: null,
        });
    }

    function btn_Summary() {
        var queryJson = {
            BeginTime: $("#txt_BeginTime").val(),
            EndTime: $("#txt_EndTime").val(),
            RawMaterialName: $("#txt_RawMaterialName").val(),
            RawMaterialModel: $("#txt_RawMaterialModel").val(),
            RawMaterialSupplier: $("#RawMaterialSupplier").attr('data-value') == "请选择材料供应商" ? null : $("#RawMaterialSupplier").attr('data-value'),
        }

        //验证
        if (queryJson["BeginTime"] == "" || queryJson["BeginTime"] == null) {
            dialogMsg("开始时间不能为空", 0);
            return false;
        }
        if (queryJson["EndTime"] == "" || queryJson["EndTime"] == null) {
            dialogMsg("结束时间不能为空", 0);
            return false;
        }
        if (queryJson["RawMaterialSupplier"] == "" || queryJson["RawMaterialSupplier"] == null) {
            dialogMsg("供应商不能空", 0);
            return false;
        }
        //if (queryJson["RawMaterialName"] == "" || queryJson["RawMaterialName"] == null) {
        //    dialogMsg("材料名称不能空", 0);
        //    return false;
        //}
        //if (queryJson["RawMaterialModel"] == "" || queryJson["RawMaterialModel"] == null) {
        //    dialogMsg("材料牌号/规格", 0);
        //    return false;
        //}

        //获取所有行ID
        var obj = $("#gridTable").jqGrid("getRowData");
        var CollarJson = [];
        //var CollarEntityJson = "";
        if (obj != "" || obj != null) {
            for (i = 0; i < obj.length; i++) {
                CollarJson[i] = { WarehouseId: obj[i].WarehouseId, WarehouseTime: obj[i].WarehouseTime }
                //CollarEntityJson = {
                //    CollarEngineering: obj[0].CollarEngineering,
                //    DepartmentId: obj[0].DepartmentId,
                //    ShippingAddress: obj[0].ShippingAddress,
                //    Date: queryJson["BeginTime"] + "——" + queryJson["EndTime"],
                //}
            }
        } //end

        if (CollarJson == []) {
            dialogMsg("数据为空，请修改查询条件", 0);
            return false;
        }

        dialogOpen({
            id: 'InfoQuantitySummary',
            title: '汇总表',
            url: '/SteelMember/RawMaterialInventory/InfoQuantitySummary?InfoJson=' + escape(JSON.stringify(queryJson)),
            width: '1100px',
            height: '760px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            },
            btn: null
        });
    }
</script>

<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">

    <div class="ui-layout-center">
