    ViewBag.Title = "InventoryDetail";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script>
    $(function () {
        GetGrid();
    });
    //模糊
    function QueryByInputRawMaterialCategory() {
        var category=$("#txt_Keyword").val();
        var categorys = $.trim(category);

        //if (category != "") {
            //alert(category);
            $("#gridTable").jqGrid("setGridParam", {
                //postData: { queryJson: JSON.stringify(category) },
                postData: { category: category },
                page: 1
            }).trigger('reloadGrid');
        //} else {

        //}
     
    }
    //
    function btn_SearchBytime() {
        var category = $("#txt_Keyword").val();
        var begintime = $("#txt_BeginTime").val();
        var endtime = $("#txt_EndTime").val();
        if (begintime == "" || endtime == "") {
            dialogMsg("请把两个时间填写完整！！", 0)
            return;
        }

        $("#gridTable").jqGrid("setGridParam", {
            //postData: { queryJson: JSON.stringify(category) },
            postData: {
                category: category,
                begintime: begintime,
                endtime: endtime
            },
            page: 1
        }).trigger('reloadGrid');

    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 108.5,
            url: "../../SteelMember/RawMaterialWarehouse/IntoInventoryDetailInfo",
            datatype: "json",
            colModel: [
                { label: '入库ID', name: 'WarehouseId', index: 'WarehouseId', width: 80, align: 'center', sortable: true, hidden: true },
                { label: '材料类型', name: 'Category', index: 'Category', width: 80, align: 'center', sortable: true },
                { label: '型号', name: 'RawMaterialModel', index: 'RawMaterialModel', width: 80, align: 'center', sortable: true },
                { label: '规格', name: 'RawMaterialStandard', index: 'RawMaterialStandard', width: 80, align: 'center', sortable: true },
                { label: '入库数量', name: 'WarehouseQuantity', index: 'WarehouseQuantity', width: 80, align: 'center', sortable: true },
                { label: '单位', name: 'Unit', index: 'Unit', width: 80, align: 'center', sortable: true },
                { label: '入库时间', name: 'WarehouseTime', index: 'WarehouseTime', width: 80, align: 'center', sortable: true },
                { label: '描述', name: 'Description', index: 'Description', width: 80, align: 'center', sortable: true },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'WarehouseId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,

           
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
    }
    //导出文件
    var JsonData1 = ""; var TableObject = "";
    function btn_derive() {
        //SetDeriveExcel("#gridTable", "材料信息一览表", "云南公投澄川高速", JsonData1, TableObject.toString());
        SetDeriveExcel("#gridTable", "原材料入库信息表", "云南公投澄川高速", JsonData1, TableObject.toString());
        dialogOpen({
            id: "DeriveFile",
            title: '原材料入库信息表',
            url: '/Utility/DeriveFile',
            width: "700px",
            height: "435px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            },
           
        });
       
    }

</script>
