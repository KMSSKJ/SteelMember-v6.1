    //加载树
    var _Category;
    var HavesChildren;
    function GetTree() {
        var item = {
            height: $(window).height() - 52,
            param: { EnCode: "RawMaterialType" },
            url: "../../SystemManage/DataItemDetail/GetDataItemTreeJson",
            onnodeclick: function (item) {
                _Category = item.value;
                if (_Category != null) {
                    alert(item.value);

                }

                HavesChildren = item.hasChildren;
                //if (!HavesChildren) {
                //    $('#btn_Search').trigger("click");
                //}
                //$('#btn_Search').trigger("click");
               // query();
            }
        };
        //初始化
        $("#itemTree").treeview(item);
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../SteelMember/RawMaterialInventory/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: '主键', name: 'InventoryId', index: 'InventoryId', width: 100, align: 'left',sortable: true ,hidden: true },
                { label: '外键', name: 'RawMaterialId', index: 'RawMaterialId', width: 100, align: 'left',sortable: true ,hidden: true },
                { label: '库存量', name: 'Quantity', index: 'Quantity', width: 100, align: 'left',sortable: true  },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'InventoryId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加原材料库存',
            url: '/SteelMember/RawMaterialInventory/Form',
            width: '500px',
            height: '600px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('InventoryId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑原材料库存',
                url: '/SteelMember/RawMaterialInventory/Form?keyValue=' + keyValue,
                width: '500px',
                height: '600px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('InventoryId');
        if (keyValue) {
            $.RemoveForm({
                url: '../../SteelMember/RawMaterialInventory/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的原材料库存！2222', 0);
        }
    }
</script>

