    //加载树
    var _Category;
    var HavesChildren;
    function GetTree() {
        var item = {
            height: $(window).height() - 52,
            param: { EnCode: "RawMaterialType" },
            url: "../../SystemManage/DataItemDetail/GetDataItemTreeJson",
            onnodeclick: function (item) {
                _Category = item.value;
               
                //if (_Category != null) {
                //    alert(item.value);

                //}

               // HavesChildren = item.hasChildren;
                //if (!HavesChildren) {
                //    $('#btn_Search').trigger("click");
                //}
                //$('#btn_Search').trigger("click");
                query();
            }
        };
        //初始化
        $("#itemTree").treeview(item);
    }
    //加载表格  Category  RawMaterialStandard  RawMaterialModel Unit InventoryTime
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../SteelMember/RawMaterialInventory/GetPageListJson",
            //url: "../../SteelMember/RawMaterialInventory/GetListJson",
            datatype: "json",
            colModel: [
                { label: '主键', name: 'InventoryId', index: 'InventoryId', width: 100, align: 'left',sortable: true  },
                //{ label: '外键', name: 'RawMaterialId', index: 'RawMaterialId', width: 100, align: 'left', sortable: true, hidden: true },
                { label: '材料类型', name: 'Category', index: 'Category', width: 100, align: 'center', sortable: true },
                { label: '规格', name: 'RawMaterialStandard', index: 'RawMaterialStandard', width: 100, align: 'center', sortable: true },
                { label: '型号', name: 'RawMaterialModel', index: 'RawMaterialModel', width: 100, align: 'center', sortable: true },
                { label: '单位', name: 'Unit', index: 'Unit', width: 100, align: 'center', sortable: true },
                { label: '库存量', name: 'Quantity', index: 'Quantity', width: 100, align: 'left', sortable: true },
               
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname:'RawMaterialId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        }); 
    }
