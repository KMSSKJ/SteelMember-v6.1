    //领用
    function btn_Collar() {
        //alert(_Category);
        var keyValue = $('#gridTable').jqGridRowValue('InventoryId'); 
        var Quantity = $('#gridTable').jqGridRowValue('Quantity');
        if (Quantity=="0") {
            dialogMsg("库存中暂时没有该材料了!!! 0.0", 0);
            return false;
        }
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '原材料领用',
                url: '/SteelMember/RawMaterialInventory/Collar?InventoryId=' + keyValue,
                width: '900px',
                height: '500px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                    $("#gridTable").trigger("reloadGrid");
                }
            });
        }
    }
