    //初始化页面
    function InitialPage() {
        //layout布局
        $('#layout').layout({
            applyDemoStyles: true,
            onresize: function () {
                $(window).resize()
            }
        });
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $("#gridTable").setGridHeight($(window).height() - 170);
                $("#itemTree").setTreeHeight($(window).height() - 52);
            }, 200);
            e.stopPropagation();
        });
    }

    //加载树
    var _Category;
    var HavesChildren;
    var SubProjectName;
    function GetTree() {
        var item = {
            height: $(window).height() - 52,
            param: { EnCode: "RawMaterialType" },
            url: "../../SystemManage/DataItemDetail/GetDataItemTreeJson",
            onnodeclick: function (item) {
                _Category = item.id;
                SubProjectName = item.text;
                $("#CenterTitle").html("-" + SubProjectName);
                query();
            }
        };
        //初始化
        $("#itemTree").treeview(item);
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 170,
            url: "../../SteelMember/RawMaterialInventory/GetPageListJson",
            //url: "../../SteelMember/RawMaterialInventory/GetListJson",
            datatype: "json",
            colModel: [
                { label: '主键', name: 'InventoryId', index: 'InventoryId', hidden: true },
                { label: '材料名称', name: 'Category', index: 'Category', width: 180, align: 'center', sortable: true },
                { label: '规格/型号', name: 'RawMaterialModel', index: 'RawMaterialModel', width: 180, align: 'center', sortable: false },
                { label: '单位', name: 'Unit', index: 'Unit', width: 100, align: 'center', sortable: false },
                { label: '库存量', name: 'Quantity', index: 'Quantity', width: 120, align: 'center', sortable: true },
                {
                    label: '备注', name: 'Description', index: 'Description', width: 200, align: 'center', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        if (rowObject.Description == null || rowObject.Description == "undefined") {
                            return "";
                        } else {
                            return "<p style='color: red'>" + cellvalue + "</p>";
                        }
                    }
                }
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'RawMaterialId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            multiselect: true,
            multiboxonly: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
    }
    function query() {
        var queryJson = {
            CategoryId: _Category
        }
        $('#gridTable').jqGrid('setGridParam', {
            postData: { queryJson: JSON.stringify(queryJson) },
        }).trigger('reloadGrid');
    }

