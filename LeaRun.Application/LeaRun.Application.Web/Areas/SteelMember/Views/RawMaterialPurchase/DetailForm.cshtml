        var childEntryJson = [];
        $('#gridTable').find('[role=row]').each(function (i) {
            if (!!$(this).find('input[id="PurchaseQuantity➩' + i + '"]').val()) {
                //alert($(this).find('input[id="PurchaseQuantity➩' + i + '"]').val());
                childEntryJson.push({
                    //InfoId: $(this).find('input[id="PurchaseQuantity➩' + i + '"]').val() + 1,
                    PurchaseQuantity: $(this).find('input[id="PurchaseQuantity➩' + i + '"]').val(),
                    //RawMaterialPurchaseId: $(this).find('input[id="RawMaterialPurchaseId➩'+i+'"]').val(),
                    RawMaterialAnalysisId: $(this).find('input[id="RawMaterialAnalysisId➩' + i + '"]').val(),
                });
            }
        });
        $.SaveForm({
            url: "../../SteelMember/RawMaterialPurchase/SaveForm?keyValue=" + keyValue,
            param: { "strEntity": JSON.stringify(postData), "strChildEntitys": JSON.stringify(childEntryJson) },
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        })
        function addtitle() {
            $.ajax({
                url: '../../SteelMember/RawMaterialPurchase/DetailRawMaterialPurchase?rawMaterialPurchaseId='+ keyValue,
                dataType: 'json',
                data: {
                    rawMaterialPurchaseId: keyValue
                },
                success: function (data) {
                    $("#Description").val(data.Description);
                    $("#CreateMan").val(data.CreateMan);
                    $("#CreateTime").val(data.CreateTime);
                    $("#ReviewMan").val(data.ReviewMan);
                    $("#ReviewTime").val(data.ReviewTime);
                    if (data.IsPassed == 0) {
                        $("#IsPassed").val("未审核");
                    } else if (data.IsPassed == 1) {
                        $("#IsPassed").val("已审核");
                    } else {
                        $("#IsPassed").val("审核失败");
                    }
                    
                    $("#IsSubmit").val(data.IsSubmit = data.IsSubmit == 0 ? "未提交" : "已提交");
                    $("#IsPurchase").val(data.IsSubmit = data.IsSubmit == 0 ? "未采购" : "已采购");
                    
                }
            })
        }
        
</script>
