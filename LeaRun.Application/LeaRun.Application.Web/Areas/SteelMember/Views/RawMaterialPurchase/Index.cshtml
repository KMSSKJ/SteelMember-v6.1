    //加载树
    var _Category;
    var HavesChildren;
    function GetTree() {
        var item = {
            height: $(window).height() - 52,
            param: { Levels: 2 },
            url: '../../SteelMember/SubProject/GetTreeJson',
            onnodeclick: function (item) {
                _Category = item.value;
                //if (_Category != null) {
                   // alert(item.value);
                    
                //}

                //HavesChildren = item.hasChildren;
                //alert(HavesChildren);
                //if (HavesChildren = true) {
