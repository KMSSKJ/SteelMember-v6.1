    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../SteelMember/RawMaterialPurchase/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: '采购单据', name: 'RawMaterialPurchaseId', index: 'RawMaterialPurchaseId', width: 80, align: 'center',sortable: true  },
                {
                    label: '提交', name: 'IsSubmit', index: 'IsSubmit', width: 80, align: 'center', sortable: true, formatter: function (cellvalue, options, rowObject) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }},
                {
                    label: '审核', name: 'IsPassed', index: 'IsPassed', width: 80, align: 'center', sortable: true, formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "<span class=\"label label-info\">未审核</span>";
                        } else if (cellvalue == 1) {
                            return "<span class=\"label label-success\">通过</span>";
                        } else {
                            return "<span class=\"label label-danger\">失败</span>";
                        }
                    }
                },
                {
                    label: '是否采购', name: 'IsPurchase', index: 'IsPurchase', width: 80, align: 'center', sortable: true, formatter: function (cellvalue, options, rowObject) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                { label: '制单人', name: 'CreateMan', index: 'CreateMan', width: 80, align: 'center',sortable: true  },
                { label: '制单时间', name: 'CreateTime', index: 'CreateTime', width: 80, align: 'center',sortable: true  },
                { label: '审核人', name: 'ReviewMan', index: 'ReviewMan', width: 80, align: 'center',sortable: true  },
                { label: '审核时间', name: 'ReviewTime', index: 'ReviewTime', width: 80, align: 'center',sortable: true  },
                { label: '备注', name: 'Description', index: 'Description', width: 80, align: 'center',sortable: true  },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'RawMaterialPurchaseId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            },
            subGrid: true,
            subGridRowExpanded: function (subgrid_id, row_id) {
                var keyValue = $gridTable.jqGrid('getRowData', row_id)['RawMaterialPurchaseId'];
                var subgrid_table_id = subgrid_id + "_t";
                $("#" + subgrid_id).html("<table id='" + subgrid_table_id + "'></table>");
                $("#" + subgrid_table_id).jqGrid({
                    url: "../../SteelMember/RawMaterialPurchase/GetDetailsJson",
                    postData: { keyValue: keyValue },
                    datatype: "json",
                    height: "100%",
                    colModel: [
                { label: '主键', name: 'InfoId', index: 'InfoId', width: 80, align: '',sortable: true ,hidden: true },
                { label: '采购单据', name: 'RawMaterialPurchaseId', index: 'RawMaterialPurchaseId', width: 80, align: '', sortable: true },
                { label: '分析主键', name: 'RawMaterialAnalysisId', index: 'RawMaterialAnalysisId', width: 80, align: '', sortable: true, hidden: true },

                { label: '原材料类型', name: "RawMaterialName", align: 'center', width: 100, sortable: false },
                { label: '型号', name: "RawMaterialModel", align: 'center', width: 100, sortable: false },
                { label: '规格', name: "RawMaterialStandard", align: 'center', width: 100, sortable: false },
                { label: '采购量', name: "PurchaseQuantity", align: 'center', width: 100, sortable: false },
                { label: '单位', name: "UnitName", align: 'center', width: 80, sortable: false },
                { label: '单价(元)', name: "RawMaterialPurchaseModelPrice", align: 'center', width: 80, sortable: false },
                { label: '描述', name: "Description", align: 'center', width: 100, sortable: false },
                    ],
                    caption: "明细",
                    rowNum: "1000",
                    rownumbers: true,
                    shrinkToFit: false,
                    gridview: true,
                    hidegrid: false
                });
            }
        });
    }
    function query() {
        //var queryJson = { category: _Category }
        var queryJson = _Category
        //alert(queryJson);
        $('#gridTable').jqGrid('setGridParam', {
           // postData: { queryJson: JSON.stringify(queryJson) },
           // postData: { queryJson: JSON.stringify(_Category) },
            postData: { queryJson: queryJson},
            page: 1
        }).trigger('reloadGrid');
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加原材料采购单',
            url: '/SteelMember/RawMaterialPurchase/Form?category=' + _Category,
            width: '1000px',
            height: '750px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑

    function btn_edit() {
        //var postData = $("#gridTable").GetWebControls(keyValue);
        var postData = $("#gridTable")
        //alert(postData.onSelectRow);
        var keyValue = $('#gridTable').jqGridRowValue('RawMaterialPurchaseId');
        var Description = $('#gridTable').jqGridRowValue('Description'); 
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑原材料采购单',
                //url: '/SteelMember/RawMaterialPurchase/Form?keyValue=' + keyValue,
                url: '/SteelMember/RawMaterialPurchase/EditForm?keyValue=' + keyValue + '&&Description=' + Description + '',
                width: '1000px',
                height: '750px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('RawMaterialPurchaseId');

        if (keyValue) {
            $.RemoveForm({
                url: '../../SteelMember/RawMaterialPurchase/RemoveForm',
                param: { keyValue: keyValue},
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的原材料采购单！', 0);
        }
    }
    //详细
    function btn_details() {
        var keyValue = $('#gridTable').jqGridRowValue('RawMaterialPurchaseId');
        var Description = $('#gridTable').jqGridRowValue('Description'); 
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '购单详情',
                url: '/SteelMember/RawMaterialPurchase/DetailForm?keyValue=' + keyValue + '&&Description='+Description+'',
                width: '1000px',
                height: '750px',
                btn:null,
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    // 提交
    function btn_submitReview() {
        var keyValues = $('#gridTable').jqGridRowValue('RawMaterialPurchaseId');
        var reviews = $('#gridTable').jqGridRowValue('IsSubmit');
        if (checkedArray(keyValues)) {
            var reviewsArr = reviews.split(",");
            if (reviewsArr.length > 0) {
                for (var i in reviewsArr) {
                    if (reviewsArr[i] == "<i class=\"fa fa-toggle-on\"></i>") {
                        dialogMsg("所选数据中包含已提交的数据，请重新选择！", 0);
                        return false;
                        break;
                    }
                }
            }
            dialogConfirm("注：您确定要提交所选中的数据吗？", function (r) {
                if (r) {
                    Loading(true, "正在提交...");
                    window.setTimeout(function () {
                        $.ajax({
                            url: "../../SteelMember/RawMaterialPurchase/SubmitReview",
                            data: { keyValues: keyValues },
                            type: "post",
                            dataType: "json",
                            success: function (data) {
                                if (data.type == "3") {
                                    dialogAlert(data.message, -1);
                                } else {
                                    Loading(false);
                                    dialogMsg(data.message, 1);
                                }
                                $('#gridTable').trigger('reloadGrid');
                            }
                        });
                    }, 500);
                }
            });
        }
    }
    //审核
    function btn_passed(type) {
        var keyValues = $('#gridTable').jqGridRowValue('RawMaterialPurchaseId');
        var reviews = $('#gridTable').jqGridRowValue('IsSubmit');
        var passeds = $('#gridTable').jqGridRowValue('IsPassed');
        if (checkedArray(keyValues)) {
            var reviewsArr = reviews.split(",");
            var passedsArr = passeds.split(",");
            if (reviewsArr.length > 0) {
                for (var i in reviewsArr) {
                    if (reviewsArr[i] == "<i class=\"fa fa-toggle-off\"></i>") {
                        dialogMsg("所选数据中包含未提交的数据，请重新选择！", 0);
                        return false;
                        break;
                    }
                }
            }
            if (passedsArr.length > 0) {
                for (var i in passedsArr) {
                    if (passedsArr[i] == "<span class=\"label label-success\">通过</span>" || passedsArr[i] == "<span class=\"label label-danger\">失败</span>") {
                        dialogMsg("所选数据中包含已审核的数据，请重新选择！", 0);
                        return false;
                        break;
                    }
                }
            }
            var message = "";
            if (type == 1) {
                message = "注：您确定要对所选中的数据进行审核通过吗？";
            } else {
                message = "注：您确定要对所选中的数据进行审核失败吗？";
            }
            dialogConfirm(message, function (r) {
                if (r) {
                    Loading(true, "正在处理...");
                    window.setTimeout(function () {
                        $.ajax({
                            url: "../../SteelMember/RawMaterialPurchase/ReviewOperation",
                            data: { keyValues: keyValues, type: type },
                            type: "post",
                            dataType: "json",
                            success: function (data) {
                                if (data.type == "3") {
                                    dialogAlert(data.message, -1);
                                } else {
                                    Loading(false);
                                    dialogMsg(data.message, 1);
                                }
                                $('#gridTable').trigger('reloadGrid');
                            }
                        });
                    }, 500);
                }
            });
        }
    }
    // 采购
    function btn_IsPurchase() {
        //IsPurchase
        var keyValues = $('#gridTable').jqGridRowValue('RawMaterialPurchaseId');
        var passeds = $('#gridTable').jqGridRowValue('IsPassed');
        var IsPurchase = $('#gridTable').jqGridRowValue('IsPurchase');
        if (checkedArray(keyValues)) {
            var reviewsArr = IsPurchase.split(",");
            var passedsArr = passeds.split(",");
            if (passedsArr.length > 0) {
                for (var i in passedsArr) {//<span class="label label-info">未审核</span>
                    if (passedsArr[i] == "<span class=\"label label-info\">未审核</span>" || passedsArr[i] == "<span class=\"label label-danger\">失败</span>") {
                        dialogMsg("所选数据中包含未通过审核的数据，请先去审核！", 0);
                        return false;
                        break;
                    }
                }
            }
            if (reviewsArr.length > 0) {
                for (var i in reviewsArr) {
                    if (reviewsArr[i] == "<i class=\"fa fa-toggle-on\"></i>") {
                        dialogMsg("所选数据中包含已采购的数据，请重新选择！", 0);
                        return false;
                        break;
                    }
                }
            }
            //dialogConfirm("注：您确定要所选中的数据都已经采购了吗？", function (r) {
                //if (r) {
                   // alert(keyValues);
                    var keyValue = $('#gridTable').jqGridRowValue('RawMaterialPurchaseId');
                    var Description = $('#gridTable').jqGridRowValue('Description');
                    if (checkedRow(keyValue)) {
                        dialogOpen({
                            id: 'Form',
                            title: '采购详情',
                            url: '/SteelMember/RawMaterialPurchase/Purchase?keyValue=' + keyValue + '&&Description=' + Description + '',
                            width: '1000px',
                            height: '750px',
                           // btn: null,
                            callBack: function (iframeId) {
                                top.frames[iframeId].AcceptClick();
                            }
                        })
                        $('#gridTable').trigger('reloadGrid');
                    }
                    //Loading(true, "正在提交...");
                    //window.setTimeout(function () {
                    //    $.ajax({
                    //        url: "../../SteelMember/RawMaterialPurchase/SubmitIsPurchase",
                    //        data: { keyValues: keyValues },
                    //        type: "post",
                    //        dataType: "json",
                    //        success: function (data) {
                    //            if (data.type == "3") {
                    //                dialogAlert(data.message, -1);
                    //            } else {
                    //                Loading(false);
                    //                dialogMsg(data.message, 1);
                    //            }
                    //            $('#gridTable').trigger('reloadGrid');
                    //        }
                    //    });
                    //}, 500);
                //}
            //});
        }
    }
</script>
