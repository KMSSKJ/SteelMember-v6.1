                    $("#table1").find("tr:eq(0)").find("td:eq(0)").html(data.entity.Category);
                    $("#table1").find("tr:eq(0)").find("td:eq(1)").html(data.entity.DepartmentId);
                    $("#table1").find("tr:eq(0)").find("td:eq(2)").html(data.entity.OrderNumbering);

                    $("#table2").find("tr:eq(1)").find("td:eq(0)").html(data.entity.CreateMan);
                    $("#table2").find("tr:eq(1)").find("td:eq(1)").html(data.entity.ReviewMan);
