@{
    ViewBag.Title = "材料列表";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    var Category = request('category');
    $(function () {
        $("#keywords").focus();
        //GetTree();
        GetGrid();
        //绑定键盘按下事件
        $(document).keypress(function (e) {
            // 回车键事件
            if (e.which == 13) {
                $("#keywords").focus();
                $("#keywords").select();
                $("#btnSearch").click();
            }
        });
    });

    //显示物料
    function GetGrid() {
        var SelectRowIndx;
       // var index = GetQuery('index');
        $("#gridTable").jqGrid({
            url: "@Url.Content("~/SteelMember/RawMaterialOrder/GridListJsonRawAnalysis")?category=" + Category,
            datatype: "json",
            height: $(window).height()-80,
            autowidth: true,
            colModel: [
                { label: '外键', name: "RawMaterialAnalysisId", hidden: true },
                { label: '主键', name: "RawMaterialId", hidden: true },
                { label: 'CategoryId', name: "CategoryId", hidden: true },
                { label: '材料类型', name: "Category", align: ' center', width: 150, sortable: false },
                { label: '材料名称', name: "RawMaterialName", align: ' center', width: 150, sortable: false },
                { label: '规格或型号', name: "RawMaterialModel", align: ' center', width:150, sortable: false },
                { label: '单位', name: "UnitId", align: ' center', width: 50, sortable: false },
                { label: '可申请量', name: "Qty", align: ' center', width: 80, sortable: false, },
            ],
            rowNum: 15,
            sortname: 'RawMaterialId',
            sortorder: 'Desc',//降序 asc升序
            pager: "#gridPager",
            viewrecords: true,
            rownumbers: true,
            gridview: true,
            multiselect: true,
            rowList: [15, 30, 50, 100, 500, 1000],
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $("#" + this.id).jqGrid('setSelection', SelectRowIndx);

                var rowIds = jQuery("#gridTable").jqGrid('getDataIDs');
                var $parentobj = top.frames["Form"];
                for (var k = 0; k < rowIds.length; k++) {
                    var curRowData = jQuery("#gridTable").jqGrid('getRowData', rowIds[k]);
                    var curChk = $("#" + rowIds[k] + "").find(":checkbox");
                }
            },
        });
    }

    //添加
    function btn_add_() {
        var KeyValue = $('#gridTable').jqGridRowValue('RawMaterialId');
        var RawMaterialAnalysisId = $('#gridTable').jqGridRowValue('RawMaterialAnalysisId');
        var RawMaterialId = $('#gridTable').jqGridRowValue('RawMaterialId');
        var RawMaterialCategory = $('#gridTable').jqGridRowValue('CategoryId');
        var RawMaterialName = $('#gridTable').jqGridRowValue('RawMaterialName');
        var RawMaterialModel = $('#gridTable').jqGridRowValue('RawMaterialModel');
        var UnitId = $('#gridTable').jqGridRowValue('UnitId');
        var Qty = $('#gridTable').jqGridRowValue('Qty');
       
        if (checkedArray(KeyValue)) {
            $.ajax({
                url: "/SteelMember/RawMaterialOrder/ListMember",
                type: "post",
                datatype: 'json',
                data: {
                    //category: Category,
                    //KeyValue: KeyValue,
                    RawMaterialAnalysisId: RawMaterialAnalysisId,
                    RawMaterialId:RawMaterialId,
                    RawMaterialCategory: RawMaterialCategory,
                    RawMaterialName: RawMaterialName,
                    RawMaterialModel: RawMaterialModel,
                    UnitId: UnitId,
                    Qty: Qty,
                },
                success: function (rowData) {
                    var rows = 1;
                    var $parentobj = top.frames["Form"];
                    while (rows < 16) {
                        $parentobj.$("#Quantity➩" + rows).val(null);
                        $parentobj.$("#RawMaterialPurchaseId➩" + rows).val(null);
                        $parentobj.$("#RawMaterialAnalysisId➩" + rows).val(null);
                        $parentobj.$("#RawMaterialId➩" + rows).val(null);
                        $parentobj.$("#RawMaterialName➩" + rows).val(null);
                        $parentobj.$("#RawMaterialModel➩" + rows).val(null);
                        $parentobj.$("#UnitId➩" + rows).val(null);
                        //$parentobj.$("#PriceAmount➩" + rows).val(null);
                        //$parentobj.$("#Price➩" + rows).val(null);
                        //$parentobj.$("#RawMaterialManufacturer➩" + rows).val(null);
                        //$parentobj.$("#RawMaterialSupplier➩" + rows).val(null);
                        $parentobj.$("#Description➩" + rows).val(null);
                        $parentobj.$("#MaxNumber➩" + rows).val(null);
                        rows++;
                    }
                    if (rowData != null) {
                        var index = 1;
                        var data1;
                        for (var i = 0; i < rowData.length; i++) {
                            $parentobj.IsExistItem(index, rowData[i].MemberNumbering);
                            //$.ajax({
                            //    type: 'post',
                            //    dataType: "text",
                            //    url: "/SteelMember/RawMaterialOrder/AddRawMaterialNumber",
                            //    data: {
                            //        category: Category,
                            //        KeyValue: rowData[i].RawMaterialId
                            //    },
                            //    cache: false,
                            //    async: false,
                            //    success: function (data) {
                            //        data1 = data;
                            //    }
                            //});
                            $parentobj.$("#RawMaterialId➩" + index).val(rowData[i].RawMaterialId);
                            $parentobj.$("#RawMaterialAnalysisId➩" + index).val(rowData[i].RawMaterialAnalysisId);
                            $parentobj.$("#RawMaterialName➩" + index).val(rowData[i].RawMaterialName);
                            $parentobj.$("#RawMaterialModel➩" + index).val(rowData[i].RawMaterialModel);
                            $parentobj.$("#UnitId➩" + index).val(rowData[i].UnitId);
                            $parentobj.$("#Quantity➩" + index).val(Number(rowData[i].Qty));
                            //$parentobj.$("#Price➩" + index).val(rowData[i].UnitPrice);
                            //$parentobj.$("#PriceAmount➩" + index).val(FormatCurrency(Number(rowData[i].UnitPrice) * Number(data1)));
                            $parentobj.$("#MaxNumber➩" + index).val(Number(rowData[i].Qty));
                            $parentobj.$("#gridTable tbody tr:eq(" + index + ")").find('input').attr("datacol", "yes");
                            index++;
                            $parentobj.$("#gridTable tbody tr:eq(" + index + ")").find('input').removeAttr('disabled');
                            $parentobj.$("#gridTable").find('.disabled').attr("disabled", "disabled");
                            $parentobj.$("#RawMaterialModel➩" + index).focus();
                        }
                    }
                    dialogClose();
                },
                error: function (e) {
                    dialogTop(e, "error");
                }
            });
        }
    }
</script>

<div class="rightline" style="margin: 5px;">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>