@{
    ViewBag.Title = "原材料分析";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = request('keyValue');
    var parentId = request('parentId');
    $(function () {
        initControl();
    })
    //初始化控件
    function initControl() {
        //单位
        $("#UnitId").ComboBox({
            url: "../../SteelMember/RawMaterialAnalysis/GetUnitJson",
            id: "UnitId",
            text: "UnitName",
            description: "==请选择==",
            height: "120px",
            allowSearch: true
        });
        //工程
        $("#TreeId").ComboBoxTree({
            url: "../../SteelMember/RawMaterialAnalysis/GetTreeJson",
            description: "==请选择==",
            height: "150px",
            allowSearch: true,
            onSelect: function (record) {
                alert(record.id);
            }
        })

        //原材料类型
        $("#RawMaterialTreeId").ComboBoxTree({
            url: "../../SteelMember/RawMaterialLibrary/GetTreeJson",
            description: "==请选择==",
            height: "150px",
            allowSearch: true,
        }).bind("change", function () {
            var value = $(this).attr('data-value');
            //加载规格或型号
            $("#RawMaterialId").ComboBoxTree({
                url: "../../SteelMember/RawMaterialLibrary/GetListJson?parentid=" + value,
                description: "==请选择==",
                allowSearch: true
            });            
        });
        //规格或型号
        $("#RawMaterialId").ComboBoxTree({
            description: "==请选择==",
            //height: "200px",
            allowSearch: true
        })
        //获取表单
        if (!!keyValue) {
            alert(keyValue);
            $.SetForm({
                url: "../../SteelMember/RawMaterialAnalysis/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#form1").SetWebControls(data);
                    $("#RawMaterialTreeId").trigger("change");
                    $("#RawMaterialId").ComboBoxTreeSetValue(data.RawMaterialId);
                }
            });
        } else {
            $("#TreeId").ComboBoxTreeSetValue(parentId);
        }
    }
    //保存表单
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").GetWebControls(keyValue);
        if (postData["TreeId"] == "") {
            postData["TreeId"] = 0;
        }
        $.SaveForm({
            url: "../../SteelMember/RawMaterialAnalysis/SaveForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").resetSelection();
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        })
    }

    $._ExistField = function (controlId, url, param) {
        var a = $("#TreeId").attr('data-value');
        var $control = $("#" + controlId);
        if (!$control.val() || a == undefined || a == "" || a == '' || a == null) {
            return false;
        }
        var data = {
            keyValue: keyValue,
            treeId: a
        };
        data[controlId] = $control.val();
        var options = $.extend(data, param);
        $.ajax({
            url: url,
            data: options,
            type: "get",
            dataType: "text",
            async: false,
            success: function (data) {
                if (data.toLocaleLowerCase() == 'false') {
                    ValidationMessage($control, '已存在,请重新输入');
                    $control.attr('fieldexist', 'yes');
                } else {
                    $control.attr('fieldexist', 'no');
                }
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                dialogMsg(errorThrown, -1);
            }
        });
    }


</script>
<div style="margin-left: 10px; margin-top: 30px; margin-right: 30px;">
    <table class="form">
        <tr>

            <td class="formTitle">工程<font face="宋体">*</font></td>
            <td class="formValue">
                <div id="TreeId" type="selectTree" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>
            </td>

            <td class="formTitle">原材料类型<font face="宋体">*</font></td>
            <td class="formValue">
                <div id="RawMaterialTreeId" type="selectTree" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>
            </td>


            @*<th class="formTitle">规格<font face="宋体">*</font></th>
                <td class="formValue">
                    <input id="RawMaterialStandard" type="text" class="form-control" placeholder="请输入规格" isvalid="yes" checkexpession="NotNull" />
                </td>*@
        </tr>
        <tr>
            <td class="formTitle">规格或型号<font face="宋体">*</font></td>
            <td class="formValue">
                <div id="RawMaterialId" type="selectTree" class="ui-select" isvalid="yes" checkexpession="NotNull"></div>
            </td>
            <th class="formTitle">数量<font face="宋体">*</font></th>
            <td class="formValue">
                <input id="RawMaterialDosage" type="text" class="form-control" placeholder="请输入数量" isvalid="yes" checkexpession="PositiveInteger" />
            </td>

        </tr>
        <tr>
            <th class="formTitle" valign="top" style="padding-top: 4px;">
                描述
            </th>
            <td class="formValue" colspan="3">
                <textarea id="Description" class="form-control" style="height: 70px;"></textarea>
            </td>
        </tr>
    </table>
</div>
