                    $finish.removeAttr('disabled');
                    $next.attr('disabled', 'disabled');
                } else {
                   // $finish.attr('disabled', 'disabled');
                    $finish.removeAttr('disabled');
                    $next.attr('disabled', 'disabled');
                }
            } else {
               // $finish.attr('disabled', 'disabled');
                $next.removeAttr('disabled');
            }
        });
        InitControl();
    }

