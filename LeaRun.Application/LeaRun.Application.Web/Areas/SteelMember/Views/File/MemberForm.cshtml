                    document.getElementById("Model_Drawing").value = data;
                    document.getElementById("_Model_Drawing").src = data;
                    document.getElementById("DelAvatar1").setAttribute("type", "button");
                    document.getElementById("DelAvatar1").value = "删除图片";
                },
