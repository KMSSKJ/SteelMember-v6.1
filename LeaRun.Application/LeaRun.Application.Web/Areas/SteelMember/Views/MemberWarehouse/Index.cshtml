    function InitialPage() {
        //layout布局
        $('#layout').layout({
            applyDemoStyles: true,
            onresize: function () {
                $(window).resize()
            }
        });
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $("#gridTable").setGridHeight($(window).height() - 170);
                $("#itemTree").setTreeHeight($(window).height() - 52);
            }, 200);
            e.stopPropagation();
        });
    }

    //加载树
    var EngineeringName, EngineeringId;
    function GetTree() {
        var item = {
            height: $(window).height() - 52,
            param: { Levels: 2 },
            url: '../../SteelMember/SubProject/GetTreeJson',
            onnodeclick: function (item) {
                EngineeringName = item.text;
                EngineeringId = item.id;
                $("#CenterTitle").html("-" + EngineeringName);
                GetGrid();
               // $('#btn_Search').trigger("click");
            }
        };
        //初始化
        $("#itemTree").treeview(item);
    }

    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');

        var queryJson = {
            SubProjectId: EngineeringId,
        }
        $gridTable.jqGrid('setGridParam', {
            postData: { queryJson: JSON.stringify(queryJson) },
            page: 1
        }).trigger('reloadGrid');

        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 170,
            url: "../../SteelMember/MemberWarehouse/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: 'RecordingId', name: 'RecordingId', index: 'RecordingId', hidden: true },
                { label: 'MemberWarehouseId', name: 'MemberWarehouseId', index: 'MemberWarehouseId', hidden: true },
                { label: 'MemberId', name: 'MemberId', index: 'MemberId',hidden: true },
                { label: 'EngineeringId', name: 'EngineeringId', index: 'SubProjectId', hidden: true },
                { label: '构件编号', name: 'MemberNumbering', index: 'MemberNumbering', width: 180, align: 'center', sortable: true },
                { label: '构件名称', name: 'MemberName', index: 'MemberName', width: 180, align: 'center', sortable: true },
                { label: '构件类型', name: 'Category', index: 'Category', width: 120, align: 'center', sortable: true},
                { label: '构件单位', name: 'UnitId', index: 'UnitId', width: 100, align: 'center', sortable: true },
                { label: '库存量', name: 'InStock', index: 'InStock', width: 120, align: 'center', sortable: true },
                { label: '库管员', name: 'Librarian', index: 'Librarian', width: 110, align: 'center', sortable: true },
                {
                    label: '更新时间', name: 'UpdateTime', index: 'UpdateTime', width: 100, align: 'center', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return formatDate(cellvalue, 'yyyy-MM-dd');//'yyyy-MM-dd hh:mm:ss'
                    }
                },
                {
                    label: '备注', name: 'Description', index: 'Description', width: 200, align: 'center', sortable: false,
                    formatter: function (cellvalue, options, rowObject) {
                        if (rowObject.Description == null || rowObject.Description == "undefined") {
                            return "";
                        } else {
                            return "<p style='color: red'>" + cellvalue + "</p>";
                        }
                    }
                },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'MemberWarehouseId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            multiselect: true,
            multiboxonly: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
