@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_layoutIndex.cshtml";
}
<script>
    ;
    $(function () {
        InitialPage();
        GetGrid();
        GetTree();
    });
    //初始化页面
    function InitialPage() {
        //layout布局
        $('#layout').layout({
            applyDemoStyles: true,
            onresize: function () {
                $(window).resize()
            }
        });
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $("#gridTable").setGridHeight($(window).height() - 170);
                $("#itemTree").setTreeHeight($(window).height() - 52);
            }, 200);
            e.stopPropagation();
        });
    }

    //加载树
    var EngineeringName, EngineeringId;
    function GetTree() {
        var item = {
            height: $(window).height() - 52,
            param: { EnCode: "EngineeringType" },
            url: '../../SystemManage/DataItemDetail/GetDataItemTreeJson',
            onnodeclick: function (item) {
                EngineeringName = item.value;
                EngineeringId = item.id;
                $('#btn_Search').trigger("click");
            }
        };
        //初始化
        $("#itemTree").treeview(item);
    }

    //加载表格
    function GetGrid(obj) {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 108.5,
            url: "../../SteelMember/MemberWarehouse/GetListJson",
            datatype: "json",
            colModel: [
                { label: 'MemberWarehouseId', name: 'MemberWarehouseId', index: 'MemberWarehouseId', width: 100, align: 'left', sortable: true, hidden: true },
                { label: 'MemberId', name: 'MemberId', index: 'MemberId', width: 100, align: 'left', sortable: true, hidden: true },
                { label: 'EngineeringId', name: 'EngineeringId', index: 'SubProjectId', width: 100, align: 'left', sortable: true, hidden: true },
                //{ label: '构件编号', name: 'MemberNumbering', index: 'MemberNumbering', width: 100, align: 'left', sortable: true },
                { label: '构件名称', name: 'MemberName', index: 'MemberName', width: 100, align: 'left', sortable: true },
                { label: '构件类型', name: 'Category', index: 'Category', width: 100, align: 'left', sortable: true },
                { label: '构件型号', name: 'MemberModel', index: 'MemberModel', width: 100, align: 'left', sortable: true },
                { label: '构件单位', name: 'MemberUnit', index: 'MemberUnit', width: 100, align: 'left', sortable: true },
                { label: '库存量', name: 'InStock', index: 'InStock', width: 100, align: 'left', sortable: true },
                { label: '库管员', name: 'Librarian', index: 'Librarian', width: 100, align: 'left', sortable: true },
                { label: '更新时间', name: 'UpdateTime', index: 'UpdateTime', width: 100, align: 'left', sortable: true },
                { label: '备注', name: 'Description', index: 'Description', width: 100, align: 'left', sortable: true },
               
            ],
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                keyword: $("#txt_Keyword").val(),
                EngineeringId: EngineeringId,
                BeginTime: $("#txt_BeginTime").val(),
                EndTime: $("#txt_EndTime").val()
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });

        switch (obj) {
            case "Search":
                $('#btn_Search').trigger("click");
                break;
        }
    }

    //入库
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '已生产订单',
            url: '/SteelMember/MemberWarehouse/InventoryInfo',
            width: '1000px',
            height: '750px',
            //btn: null,
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
                $("#gridTable").trigger("reloadGrid");
            }
        })
    }
    //入库报表
    function btn_add_table() {
        dialogOpen({
            id: 'Form',
            title: '入库信息',
            url: '/SteelMember/MemberWarehouse/InventoryDetail?Class=' + escape('入库'),
            width: '1000px',
            height: '750px',
            btn: null,
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();

            }
        })
    }

    //出库
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('MemberWarehouseId');
        var InStock = $('#gridTable').jqGridRowValue('InStock');
        if (InStock == "0") {
            dialogMsg("库存中暂时没有该构件了!!! 0.0", 0);
            return false;
        }
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '构件出库',
                url: '/SteelMember/MemberWarehouse/Collar?MemberWarehouseId=' + keyValue,
                width: '900px',
                height: '500px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                    $("#gridTable").trigger("reloadGrid");
                }
            });
        }
    }

    //出库报表
    function btn_edit_table() {
        dialogOpen({
            id: 'Form',
            title: '出库信息',
            url: '/SteelMember/MemberWarehouse/InventoryDetail?Class='+ escape('出库'),
            width: '1000px',
            height: '750px',
            btn: null,
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();

            }
        })

    }

    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('MemberWarehouseId');
        if (keyValue) {
            $.RemoveForm({
                url: '../../SteelMember/MemberWarehouse/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的构件库存！', 0);
        }
    }
</script>
<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-west">
        <div class="west-Panel">
            <div class="panel-Title">工程类型</div>
            <div id="itemTree"></div>
        </div>
    </div>
    <div class="ui-layout-center">
        <div class="center-Panel">
            <div class="panel-Title">库存信息</div>
            <div class="titlePanel">
                <div class="title-search">
                    <table>
                        <tr>
                            <td>
                                <label>时间(起)</label>
                            </td>
                            <td>
                                <input id="txt_BeginTime" type="datetime-local" class="form-control" style="width:160px" />
                            </td>
                            <td>
                                <label style="margin-left:5px">时间(束)</label>
                            </td>
                            <td>
                                <input id="txt_EndTime" type="datetime-local" class="form-control" style="width:160px" />
                            </td>
                            
                            <td style="padding-left: 10px;">
                                <div id="queryCondition" class="btn-group">
                                    <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择条件</a>
                                    <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a data-value="Category">构件类型</a></li>
                                        <li><a data-value="MemberName">构件名称</a></li>
                                        @*<li><a data-value="MemberNumbering">编号</a></li>*@
                                    </ul>
                                </div>
                            </td>
                            <td style="padding-left: 2px;">
                                <input id="txt_Keyword" onkeyup="GetGrid('Search')" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                            </td>
                            <td style="padding-left: 5px;">
                                <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="toolbar">
                    <div class="btn-group">
                        <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                        <a id="lr-in_library" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;入库</a>
                        <a id="lr-out_library" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;出库</a>
                        <a id="lr-in_library_tabel" class="btn btn-default" onclick="btn_add_table()"><i class="fa fa-plus"></i>&nbsp;入库报表</a>
                        <a id="lr-out_library_tabel" class="btn btn-default" onclick="btn_edit_table()"><i class="fa fa-pencil-square-o"></i>&nbsp;出库报表</a>
                        @*<a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>*@
                    </div>
                </div>
            </div>
            <div class="gridPanel">
                <table id="gridTable"></table>
                <div id="gridPager"></div>
            </div>
        </div>
    </div>
</div>