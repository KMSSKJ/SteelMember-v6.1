@{
    ViewBag.Title = "InventoryDetail";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script>
    var Type = request('Type');
    $(function () {
        GetGrid("");
    });

    //加载表格
    function GetGrid(obj) {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 108.5,
            url: "../../SteelMember/MemberWarehouseRecording/GetPageListJson?Type=" +Type,
            datatype: "json",
            colModel: [
                { label: '主键', name: 'RecordingId', index: 'RecordingId', width: 80, align: 'center', sortable: true, hidden: true },
                { label: '构件编号', name: 'MemberNumbering', index: 'Category', width: 80, align: 'center', sortable: true },
                { label: '构件名称', name: 'MemberName', index: 'MemberName', width: 80, align: 'center', sortable: true },
                { label: '构件类型', name: 'Category', index: 'Category', width: 80, align: 'center', sortable: true },
                { label: '所属工程', name: 'CollarEngineering', index: 'CollarEngineering', width: 80, align: 'center', sortable: true },
                { label: '数量', name: 'InStock', index: 'InStock', width: 80, align: 'center', sortable: true },
                { label: '单位', name: 'MemberUnit', index: 'MemberUnit', width: 80, align: 'center', sortable: true },
                { label: '报送人', name: 'ToReportPeople', index: 'ToReportPeople', width: 80, align: 'center', sortable: true },
                { label: '领取部门', name: 'CollarDepartment', index: 'CollarDepartment', width: 80, align: 'center', sortable: true },
                { label: '领取人', name: 'Receiver', index: 'ToReportPeople', width: 80, align: 'center', sortable: true },
                { label: '领取人电话', name: 'ReceiverTel', index: 'CollarDepartment', width: 80, align: 'center', sortable: true },
                { label: '库管员', name: 'Librarian', index: 'Librarian', width: 80, align: 'center', sortable: true },
                { label: '更新时间', name: 'UpdateTime', index: 'UpdateTime', width: 80, align: 'center', sortable: true },
                { label: '操作类型', name: 'Class', index: 'Class', width: 80, align: 'center', sortable: true },
                { label: '描述', name: 'Description', index: 'Description', width: 80, align: 'center', sortable: true },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'RecordingId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
          var queryJson = {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                keyword: $("#txt_Keyword").val(),
                BeginTime: $("#txt_BeginTime").val(),
                EndTime: $("#txt_EndTime").val()
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');

        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });

        switch (obj) {
            case "Search":
                $('#btn_Search').trigger("click");
                break;
        }
    }
    //导出文件
    var JsonData1 = ""; var TableObject = "";
    function btn_derive() {
        SetDeriveExcel("#gridTable", "构件出入库信息表", "云南公投澄川高速", JsonData1, TableObject.toString());
        dialogOpen({
            id: "DeriveFile",
            title: '构件出入库信息表',
            url: '/Utility/DeriveFile',
            width: "700px",
            height: "435px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            },

        });

    }

    //input改变事件
    function InputChange() {
        $('#btn_Search').trigger("click");
    }
</script>

<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <input id="Type" type="hidden" />
    <div class="ui-layout-center">
        <div class="center-Panel">
            <div class="panel-Title">信息</div>
            <div class="titlePanel">
                <div class="title-search">
                    <table>
                        <tr>
                            <td style="width:110px">
                                <input id="txt_BeginTime" type="text" class="form-control input-wdatepicker" placeholder="选择开始时间" onfocus="WdatePicker()" onblur="InputChange()" />
                            </td>
                            <td style="padding-left:2px;width:110px">
                                <input id="txt_EndTime" type="text" class="form-control input-wdatepicker" placeholder="选择结束时间" onfocus="WdatePicker()" onblur="InputChange()" />
                            </td>
                            <td style="padding-left: 10px;">
                                <div id="queryCondition" class="btn-group">
                                    <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择条件</a>
                                    <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a data-value="CollarEngineering">所属工程</a></li>
                                        <li><a data-value="Category">构件类型</a></li>
                                        <li><a data-value="MemberName">构件名称</a></li>
                                        <li><a data-value="MemberNumbering">编号</a></li>
                                    </ul>
                                </div>
                            </td>
                            <td style="padding-left: 5px;width:110px">
                                <input id="txt_Keyword" onkeyup="GetGrid('Search')" type="text" class="form-control" placeholder="输入要查询编号" />
                            </td>
                            <td style="padding-left: 5px;display:none">
                                <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="toolbar">
                    <div class="btn-group">
                        <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>刷新</a>
                        <a id="lr-derive" class="btn btn-default" onclick="btn_derive()"><i class="fa fa-download"></i>导出</a>
                    </div>

                </div>
            </div>
            <div class="gridPanel">
                <table id="gridTable"></table>
                <div id="gridPager"></div>
            </div>
        </div>
    </div>
</div>