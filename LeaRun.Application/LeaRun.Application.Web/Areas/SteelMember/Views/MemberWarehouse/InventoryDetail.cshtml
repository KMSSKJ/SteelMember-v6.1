                { label: '构件名称', name: 'MemberName', index: 'MemberName', width: 120, align: 'center', sortable: false  },
                { label: '构件类型', name: 'Category', index: 'Category', width: 100, align: 'center', sortable: false },
                { label: '所属工程', name: 'CollarEngineering', index: 'CollarEngineering', width: 100, align: 'center', sortable: true },
                { label: '数量', name: 'InStock', index: 'InStock', width: 100, align: 'center', sortable: true },
                { label: '单位', name: 'UnitId', index: 'UnitId', width: 80, align: 'center', sortable: false },
                //{ label: '报送人', name: 'ToReportPeople', index: 'ToReportPeople', width: 80, align: 'center', sortable: true },
                //{ label: '领取部门', name: 'CollarDepartment', index: 'CollarDepartment', width: 80, align: 'center', sortable: true },
