    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('RecordingId');
        if (checkedArray(keyValue)) {
            $.RemoveForm({
                url: '../../SteelMember/MemberWarehouseRecording/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的数据！', 0);
        }
    }
    //导出文件
    var JsonData1 = ""; var TableObject = "";
