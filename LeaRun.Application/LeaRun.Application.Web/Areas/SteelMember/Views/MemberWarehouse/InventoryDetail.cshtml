@{
    ViewBag.Title = "InventoryDetail";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script>
    var Class = request('Class');
    $(function () {
        GetGrid("");
    });
  
    //加载表格
    function GetGrid(obj) {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        var queryJson = {
            condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
            keyword: $("#txt_Keyword").val(),
            Class: Class,
            BeginTime: $("#txt_BeginTime").val(),
            EndTime: $("#txt_EndTime").val()
        };
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 108.5,
            url: "../../SteelMember/MemberWarehouseRecording/GetPageListJson?queryJson=" + JSON.stringify(queryJson),
            datatype: "json",
            colModel: [
                { label: '主键', name: 'RecordingId', index: 'RecordingId', width: 80, align: 'center', sortable: true, hidden: true },
                { label: '类型', name: 'Category', index: 'Category', width: 80, align: 'center', sortable: true },
                { label: '型号', name: 'MemberModel', index: 'MemberModel', width: 80, align: 'center', sortable: true },
                { label: '规格', name: 'MemberStandard', index: 'MemberStandard', width: 80, align: 'center', sortable: true },
                { label: '数量', name: 'InStock', index: 'InStock', width: 80, align: 'center', sortable: true },
                { label: '单位', name: 'Unit', index: 'Unit', width: 80, align: 'center', sortable: true },
                { label: '更新时间', name: 'UpdateTime', index: 'UpdateTime', width: 80, align: 'center', sortable: true },
                { label: '操作类型', name: 'Class', index: 'Class', width: 80, align: 'center', sortable: true },
                { label: '描述', name: 'Description', index: 'Description', width: 80, align: 'center', sortable: true },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'RecordingId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
          
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');
        });

        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });

        switch (obj) {
            case "Search":
                $('#btn_Search').trigger("click");
                break;         
        }
    }
    //导出文件
    var JsonData1 = ""; var TableObject = "";
    function btn_derive() {
        SetDeriveExcel("#gridTable", "构件出入库信息表", "云南公投澄川高速", JsonData1, TableObject.toString());
        dialogOpen({
            id: "DeriveFile",
            title: '构件出入库信息表',
            url: '/Utility/DeriveFile',
            width: "700px",
            height: "435px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            },
           
        });
       
    }

</script>

<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <input id="Class" type="hidden" />
    <div class="ui-layout-center">
        <div class="center-Panel">
            <div class="panel-Title">信息</div>
            <div class="titlePanel">
                <div class="title-search">
                    <table>
                        <tbody>
                            <tr>
                                <td>
                                    <label style="margin-left:20px">时间(起)</label>
                                </td>
                                <td>
                                    <input id="txt_BeginTime" type="datetime-local" class="form-control" style="width:160px" />
                                </td>
                                <td>

                                    <label style="margin-left:10px">时间(束)</label>
                                </td>
                                <td>
                                    <input id="txt_EndTime" type="datetime-local" class="form-control" style="width:160px" />
                                </td>
                                
                                <td style="padding-left: 10px;">
                                    <div id="queryCondition" class="btn-group">
                                        <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择条件</a>
                                        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            <li><a data-value="Category">构件类型</a></li>
                                            <li><a data-value="MemberName">构件型号</a></li>
                                            @*<li><a data-value="MemberNumbering">编号</a></li>*@
                                        </ul>
                                    </div>
                                </td>
                                <td style="padding-left: 2px;">
                                    <input id="txt_Keyword" onkeyup="GetGrid('Search')" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                                </td>
                                <td style="padding-left: 5px;">
                                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                                </td>
                            </tr>
                           
                        </tbody>
                    </table>
                </div>
                <div class="toolbar">
                    <div class="btn-group">
                        <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>刷新</a>
                        <a id="lr-derive" class="btn btn-default" onclick="btn_derive()"><i class="fa fa-download"></i>导出</a>
                    </div>

                </div>
            </div>
            <div class="gridPanel">
                <table id="gridTable"></table>
                <div id="gridPager"></div>
            </div>
        </div>
    </div>
</div>