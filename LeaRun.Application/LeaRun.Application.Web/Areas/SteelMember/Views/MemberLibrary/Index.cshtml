@{;
    ViewBag.Title = "构件库列表页面";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(function () {
        InitialPage();
        GetTree();
        GetGrid();
    });
    //鼠标移动放大图片
    function showBigImg(oEvent, imgPath) {
        bigImg.src = imgPath;
        var oDiv = document.getElementById("BigDiv");
        oDiv.style.visibility = "visible";
        oDiv.style.left = oEvent.clientX + 5;
        oDiv.style.top = oEvent.clientY + 5;
    }
    function leaveBigImg(oEvent) {
        var oDiv = document.getElementById("BigDiv");
        oDiv.style.visibility = "hidden";
    }//鼠标移动放大图片end

    //初始化页面
    function InitialPage() {
        //layout布局
        $('#layout').layout({
            applyDemoStyles: true,
            onresize: function () {
                $(window).resize()
            }
        });
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $("#gridTable").setGridHeight($(window).height() - 170);
                $("#itemTree").setTreeHeight($(window).height() - 52);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载树
    var SubProjectName = "";
    var SubProjectId = "";
    var HavesChildren = "";
    function GetTree() {
        var item = {
            height: $(window).height() - 52,
            //param: { EnCode: "EngineeringType" },
            //url: '../../SystemManage/DataItemDetail/GetDataItemTreeJson',
            param: { Levels: 2 },
            url: '../../SteelMember/SubProject/GetTreeJson',
            onnodeclick: function (item) {
                SubProjectName = item.text;
                SubProjectId = item.id;
                HavesChildren = item.hasChildren;
                $("#CenterTitle").html("-" + SubProjectName)
                GetGrid();
                //$('#btn_Search').trigger("click");
            }
        };
        //初始化
        $("#itemTree").treeview(item);
        $("#itemTree_b51550ed_5f23_4de6_a509_b534c24ae2ee").hide();
    }

    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');

        var queryJson = {
            SubProjectId: SubProjectId,
            HavesChildren: HavesChildren
        }
        $gridTable.jqGrid('setGridParam', {
            postData: { queryJson: JSON.stringify(queryJson) },
            page: 1
        }).trigger('reloadGrid');

        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 170,
            url: "../../SteelMember/MemberLibrary/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: '主键', name: 'MemberId', index: 'MemberId', hidden: true },
                { label: '外键', name: 'SubProjectId', index: 'SubProjectId', hidden: true },
                {
                    label: '图标', hidden: false, name: 'Icon', index: 'Icon', align: 'center', width: 40, sortable: false,
                    formatter: function (cellvalue, options, rowObject) {
                        var Icon = cellvalue;
                        if (Icon != "" || Icon != null) {
                            var filename = Icon.substring(0, Icon.lastIndexOf('.'));//获取文件名称，去除后缀名
                            filename = filename + "/" + Icon;

                            var filename1 = rowObject.CAD_Drawing.substring(0, rowObject.CAD_Drawing.lastIndexOf('.'));//获取文件名称，去除后缀名
                            CADPath = "../../Resource/Document/NetworkDisk/System/Member/" + filename1 + "/" + rowObject.CAD_Drawing;

                            var filename2 = rowObject.Model_Drawing.substring(0, rowObject.Model_Drawing.lastIndexOf('.'));//获取文件名称，去除后缀名
                            ModelPath = "../../Resource/Document/NetworkDisk/System/Member/" + filename2 + "/" + rowObject.Model_Drawing;

                            if (Icon == "1.png") {
                                return "<img style='width:44px;height:32px;' src='../../Resource/Document/NetworkDisk/System/Member/1/1.png'onmouseover=\"showBigImg(event,'../../Resource/Document/NetworkDisk/System/Member/1/1.png')\"onmouseout=\"leaveBigImg(event)\"/>";
                            } else {
                                return "<img style='width:44px;height:32px;' src='../../Resource/Document/NetworkDisk/System/Member/" + filename + "' onmouseover=\"showBigImg(event,'../../Resource/Document/NetworkDisk/System/Member/" + filename + "')\" onmouseout=\"leaveBigImg(event)\" />";
                            }
                        } else {
                            return "";
                        }
                    }
                },
                { label: '构件类型', name: 'Category', index: 'Category', width: 100, align: 'left', sortable: true },
                { label: '构件名称', name: 'MemberName', index: 'MemberName', width: 150, align: 'center', sortable: false },
                { label: '编号', name: 'MemberNumbering', index: 'MemberNumbering', width: 150, align: 'center', sortable: true },
                { label: '构件单位', name: 'UnitId', index: 'UnitId', width: 90, align: 'center', sortable: true },
                {
                    label: '更新时间', name: 'UploadTime', index: 'UploadTime', width: 90, align: 'center', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return formatDate(cellvalue, 'yyyy-MM-dd');//'yyyy-MM-dd hh:mm:ss'
                    }
                },
                {
                    label: '材料状态', name: 'IsRawMaterial', index: 'IsRawMaterial', width: 60, align: 'center', sortable: false,
                    formatter: function (cellvalue, options, rowObject) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: '备注', name: 'Description', index: 'Description', width: 150, align: 'center', sortable: false,
                    formatter: function (cellvalue, options, rowObject) {
                        if (rowObject.Description == null || rowObject.Description == "undefined") {
                            return "";
                        } else {
                            return "<p style='color: red'>" + cellvalue + "</p>";
                        }
                    }
                },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'UploadTime',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            multiselect: true,
            multiboxonly: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        ////查询条件
        //$("#queryCondition .dropdown-menu li").click(function () {
        //    var text = $(this).find('a').html();
        //    var value = $(this).find('a').attr('data-value');
        //    $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        //});
        ////查询事件
        //$("#btn_Search").click(function () {
        //    var queryJson = {
        //        condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
        //        SubProjectId: SubProjectId,
        //        keyword: $("#txt_Keyword").val(),
        //        BeginTime: $("#txt_BeginTime").val(),
        //        EndTime: $("#txt_EndTime").val()
        //    }
        //    $gridTable.jqGrid('setGridParam', {
        //        postData: { queryJson: JSON.stringify(queryJson) },
        //        page: 1
        //    }).trigger('reloadGrid');
        //});
        ////查询回车
        //$('#txt_Keyword').bind('keypress', function (event) {
        //    if (event.keyCode == "13") {
        //        $('#btn_Search').trigger("click");
        //    }
        //});
    }
    //新增
    function btn_add() {
        if (!HavesChildren) {
            dialogOpen({
                id: 'Form',
                title: '添加构件',
                url: '/SteelMember/MemberLibrary/Form?SubProjectId=' + SubProjectId,
                width: '700px',
                height: '600px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                },
                btn: null
            });
        } else {
            dialogMsg("请选择子级工程", 0);
        }
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('MemberId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑构件',
                url: '/SteelMember/MemberLibrary/Form?keyValue=' + keyValue,
                width: '700px',
                height: '600px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                },
                btn: null
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('MemberId');
        if (checkedArray(keyValue)) {
            $.RemoveForm({
                url: '../../SteelMember/MemberLibrary/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        }
    }

    //构件图纸/模型管理
    function btn_drawing() {
        var KeyValue = $("#gridTable").jqGridRowValue("MemberId");
        if (checkedRow(KeyValue)) {
            dialogOpen({
                id: "DrawingManagement",
                title: '构件信息',
                url: '../../SteelMember/MemberLibrary/DrawingManagement?KeyValue=' + KeyValue,
                width: "705px",
                height: "675px",
                btn: null
            });
        }
    }

    //导入文件
    function btn_import() {
        if (!!SubProjectId) {
            if (!HavesChildren) {
                dialogOpen({
                    id: "ImportFile",
                    title: '导入功能',
                    url: '/SteelMember/MemberLibrary/ImportFile?KeyValue=' + SubProjectId,
                    width: "400px",
                    height: "300px",
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    },
                    btn: null
                });

            } else {
                dialogMsg('此节点不可编辑，请选择一个子节点！', 0);
            }
        }
        else {
            dialogMsg('请选择文件夹目录！', 0);
        }
    }

    //导出
    function btn_derive() {
        if (!HavesChildren) {
            dialogOpen({
                id: "ExcelIExportDialog",
                title: '导出Excel数据',
                url: '/Utility/ExcelExportForm?gridId=' + "gridTable" + "&filename=" + escape("构件信息导出"),
                width: "500px",
                height: "380px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }, btn: ['导出Excel', '关闭']
            });
        } else {
            dialogMsg("请选择子级工程", 0);
        }
    }
    //构件分类
    function btn_membercategory() {
        dialogOpen({
            id: "MemberCategoryIndex",
            title: '构件分类',
            url: '/SteelMember/MemberLibrary/MemberCategoryIndex',
            width: "800px",
            height: "500px",
            btn: null
        });
    };

    function Search() {
        if (!HavesChildren) {
            dialogOpen({
                id: "AdvancedSearchMemberForm",
                title: '高级查询',
                url: '/Utility/AdvancedSearchMemberForm?SubProjectId=' + SubProjectId,
                width: "670px",
                height: "180px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                },
                btn: null,
            });
        } else {
            dialogMsg("请选择子级工程", 0);
        }
    }
</script>

