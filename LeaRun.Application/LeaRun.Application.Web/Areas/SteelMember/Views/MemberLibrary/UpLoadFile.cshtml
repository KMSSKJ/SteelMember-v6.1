    function UpladFile() {
        // js 获取文件对象
        var fileObj = document.getElementById("fileToUpload").files;
        // 接收上传文件的后台地址
        var FileController = "/SteelMember/MemberLibrary/UploadPhoto";

        // FormData 对象
        var form = new FormData();
        // 可以增加表单数据
        form.append("author", "hooyes");
        // 文件对象
        for (var i = 0; i < fileObj.length; i++)
            form.append("file" + i, fileObj[i]);
        $.ajax({
            url: FileController,
            type: "post",
            data: form,
            processData: false,
            contentType: false,
            success: function (data) {
                dialogMsg(data, 0);
                if (data == "操作成功！") {
                    $.currentIframe().$("#gridTable").trigger("reloadGrid");
                    dialogClose();
                }
            },
            error: function (e) {
                dialogMsg(e,0);

            }
        });

    }

