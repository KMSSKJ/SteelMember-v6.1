@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 146.5);
            }, 200);
            e.stopPropagation();
        });
    }

    //鼠标移动放大图片
    function showBigImg(oEvent, imgPath) {
        bigImg.src = imgPath;
        var oDiv = document.getElementById("BigDiv");
        oDiv.style.visibility = "visible";
        oDiv.style.left = oEvent.clientX + 5;
        oDiv.style.top = oEvent.clientY + 5;
    }
    function leaveBigImg(oEvent) {
        var oDiv = document.getElementById("BigDiv");
        oDiv.style.visibility = "hidden";
    }//鼠标移动放大图片end

    //加载表格
    var subgrid_table_id;
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 146.5,
            url: "../../SteelMember/SafetyEquipment/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: 'Id', name: 'Id', index: 'Id',hidden: true },
                {
                    label: '图片', name: 'Icon', index: 'Icon', width: 60, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        var Icon = cellvalue;
                        if (Icon != "" || Icon != null) {
                            var filename = Icon.substring(0, Icon.lastIndexOf('.'));//获取文件名称，去除后缀名
                            filename = filename + "/" + Icon;

                            //var filename1 = rowObject.CAD_Drawing.substring(0, rowObject.CAD_Drawing.lastIndexOf('.'));//获取文件名称，去除后缀名
                            //CADPath = "../../Resource/Document/NetworkDisk/System/Member/" + filename1 + "/" + rowObject.CAD_Drawing;

                            //var filename2 = rowObject.Model_Drawing.substring(0, rowObject.Model_Drawing.lastIndexOf('.'));//获取文件名称，去除后缀名
                            //ModelPath = "../../Resource/Document/NetworkDisk/System/Member/" + filename2 + "/" + rowObject.Model_Drawing;

                            if (Icon == "1.png") {
                                return "<img style='width:44px;height:32px;' src='../../Resource/Document/NetworkDisk/System/Member/1/1.png'onmouseover=\"showBigImg(event,'../../Resource/Document/NetworkDisk/System/Member/1/1.png')\"onmouseout=\"leaveBigImg(event)\"/>";
                            } else {
                                return "<img style='width:44px;height:32px;' src='../../Resource/Document/NetworkDisk/System/Member/" + filename + "' onmouseover=\"showBigImg(event,'../../Resource/Document/NetworkDisk/System/Member/" + filename + "')\" onmouseout=\"leaveBigImg(event)\" />";
                            }
                        } else {
                            return "";
                        }
                    } },
                { label: '设备名称', name: 'Name', index: 'Name', width: 180, align: 'center', sortable: true },
                { label: '编号', name: 'Code', index: 'Code', width: 180, align: 'center', sortable: true },
                { label: '规格型号', name: 'StandardModel', index: 'StandardModel', width: 150, align: 'center', sortable: true },
                { label: '责任人', name: 'SafetyResponsiblePerson', index: 'SafetyResponsiblePerson', width: 100, align: 'center', sortable: true },
                { label: '生产厂商', name: 'ProduceManufacturers', index: 'ProduceManufacturers', width: 100, align: 'center', sortable: true },
                { label: '厂商电话', name: 'ManufacturersTel', index: 'ManufacturersTel', width: 100, align: 'center', sortable: true },
                {
                    label: '状态', name: 'Status', index: 'Status', width:70, align: 'center', sortable: true,
                    formatter: function (cellvalue, value, row, index) {
                        if (cellvalue == 0) {
                            return "<span class=\"label label-info\">需保养</span>";
                        } else if (cellvalue == 1) {
                            return "<span class=\"label label-success\">正常</span>";
                        } else if (cellvalue == 2) {
                            return "<span class=\"label label-warning\">维护中</span>";
                        } else if (cellvalue == 3) {
                            return "<span class=\"label label-danger\">故障</span>";
                        }
                    }
                },
                {
                    label: '进场时间', name: 'ApproachDate', index: 'ApproachDate', width: 90, align: 'center', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return formatDate(cellvalue, 'yyyy-MM-dd');//'yyyy-MM-dd hh:mm:ss'
                    }
                },
                {
                    label: '保养时间', name: 'MaintenanceDate', index: 'MaintenanceDate', width: 90, align: 'center', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return formatDate(cellvalue, 'yyyy-MM-dd');//'yyyy-MM-dd hh:mm:ss'
                    }
                },
                { label: '保修至', name: 'WarrantyDate', index: 'WarrantyDate', width: 90, align: 'center', sortable: true },
                { label: '说明', name: 'Description', index: 'Description', width: 100, align: 'center', sortable: false },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'Id',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            },
            subGrid: true,
            subGridRowExpanded: function (subgrid_id, row_id) {
                var keyValue = $gridTable.jqGrid('getRowData', row_id)['Id'];
                subgrid_table_id = subgrid_id + "_t";
                $("#" + subgrid_id).html("<table id='" + subgrid_table_id + "'></table>");
                $("#" + subgrid_table_id).jqGrid({
                    url: "../../SteelMember/EquipmentMaintenanceRecords/GetListJsonFunc",
                    postData: { keyValue: keyValue },
                    datatype: "json",
                    height: "100%",
                    colModel: [
                        { label: 'InfoId', name: 'InfoId', index: 'InfoId',hidden: true },
                        { label: 'Id', name: 'Id', index: 'Id', hidden: true },
                        { label: '维护项目', name: 'MaintenanceContent', index: 'MaintenanceContent', width:180, align: 'center', sortable: true },
                        { label: '故障原因', name: 'MalfunctionReason', index: 'MalfunctionReason', width: 180, align: 'center', sortable: true },
                        { label: '维护时间', name: 'MaintenanceDate', index: 'MaintenanceDate', width: 90, align: 'center', sortable: true },
                        { label: '解决方法', name: 'SolveMethod', index: 'SolveMethod', width: 200, align: 'center', sortable: true },
                        { label: '维护人', name: 'MaintenancePeople', index: 'MaintenancePeople', width: 100, align: 'center', sortable: true },
                        {
                            label: '备注', name: 'Description', index: 'Description', width: 200, align: 'left',
                            formatter: function (cellvalue, options, rowObject) {
                                if (rowObject.Description == null || rowObject.Description == "undefined") {
                                    return "";
                                } else {
                                    return "<p style='color: red'>" + cellvalue + "</p>";
                                }
                            }
                        },
                    ],
                    caption: "明细",
                    rowNum: "1000",
                    rownumbers: true,
                    shrinkToFit: false,
                    gridview: true,
                    hidegrid: false
                });
            }
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                keyword: $("#txt_Keyword").val()
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加安全设备',
            url: '/SteelMember/SafetyEquipment/Form',
            width: '660px',
            height: '460px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('Id');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑安全设备',
                url: '/SteelMember/SafetyEquipment/Form?keyValue=' + keyValue,
                width: '660px',
                height: '460px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('Id');
        if (keyValue) {
            $.RemoveForm({
                url: '../../SteelMember/SafetyEquipment/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的安全设备！', 0);
        }
    }
    //新增
    function btn_addMaintain() {
        var Id = $('#gridTable').jqGridRowValue('Id');
        if (checkedRow(Id)) {
            dialogOpen({
                id: 'Form',
                title: '添加设备',
                url: '/SteelMember/ProduceEquipment/MaintenanceRecordsForm?Id=' + Id,
                width: '500px',
                height: '360px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        } else {
            dialogMsg('请选择要维护设备！', 0);
        }
    }
    //编辑
    function btn_editMaintain() {
        var keyValue = $('#' + subgrid_table_id).jqGridRowValue('InfoId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑设备维护',
                url: '/SteelMember/ProduceEquipment/MaintenanceRecordsForm?keyValue=' + keyValue,
                width: '500px',
                height: '360px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_deleteMaintain() {
        var keyValue = $('#' + subgrid_table_id).jqGridRowValue('InfoId');
        if (checkedRow(keyValue)) {
            $.RemoveForm({
                url: '../../SteelMember/EquipmentMaintenanceRecords/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的生产设备！', 0);
        }
    }

</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td>
                    <div id="queryCondition" class="btn-group">
                        <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择条件</a>
                        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a data-value="Name">设备名称</a></li>
                            <li><a data-value="Code">编号</a></li>
                            <li><a data-value="StandardModel">规格型号</a></li>
                        </ul>
                    </div>
                </td>
                <td>
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 120px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
        </div>
        <div class="btn-group">
            <a id="lr-addMaintain" class="btn btn-default" onclick="btn_addMaintain()"><i class="fa fa-plus"></i>&nbsp;新增维护</a>
            <a id="lr-editMaintain" class="btn btn-default" onclick="btn_editMaintain()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑维护</a>
            <a id="lr-deleteMaintain" class="btn btn-default" onclick="btn_deleteMaintain()"><i class="fa fa-trash-o"></i>&nbsp;删除维护</a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
</div>
<div id="BigDiv" style="margin-left:50px;margin-top:160px; width:360px;height:360px; position: absolute; visibility: hidden; padding: 5px;z-index:999">
    <img id="bigImg" src="" style="width:100%;height:100%" />
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
