@{
    ViewBag.Title = "原材料分析";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script>
    $(function () {
        InitialPage();
        GetTree();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //layout布局
        $('#layout').layout({
            applyDemoStyles: true,
            onresize: function () {
                $(window).resize()
            }
        });
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $("#gridTable").setGridHeight($(window).height() - 170);
                $("#itemTree").setTreeHeight($(window).height() - 52);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载树
    var _parentId = "";
    function GetTree() {
        var item = {
            height: $(window).height() - 52,
            url: "../../SteelMember/RawMaterialAnalysis/GetTreeJson",
            onnodeclick: function (item) {
                _parentId = item.id;
                $('#btn_Search').trigger("click");
            }
        };
        //初始化
        $("#itemTree").treeview(item);
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            url: "../../SteelMember/RawMaterialAnalysis/GetPageListJson?parentid=0",
            datatype: "json",
            height: $(window).height() - 170,
            autowidth: true,
            colModel: [
                { label: "主键", name: "Id", index: "Id", hidden: true },
                {
                    label: "原材料类型", name: "RawMaterialTreeId", index: "RawMaterialTreeId", width: 350, align: "left",
                    formatter: function (cellvalue, options, rowObject) {
                        var a = "";
                        $.ajax({
                            url: "../../SteelMember/RawMaterialAnalysis/GetTreeName",
                            data: { keyValue: cellvalue },
                            type: "get",
                            dataType: "text",
                            async: false,
                            success: function (data) {
                                a = data;
                            },

                        })
                        return a;
                    }
                },
                {
                    label: "规格或型号", name: "RawMaterialId", index: "RawMaterialId", width: 350, align: "left",
                    formatter: function (cellvalue, options, rowObject) {
                        var a = "";
                        $.ajax({
                            url: "../../SteelMember/RawMaterialLibrary/GetFormJson",
                            data: { keyValue: cellvalue },
                            type: "get",
                            dataType: "json",
                            async: false,
                            success: function (data) {
                                a = data.RawMaterialModel;
                            },

                        })
                        return a;
                    }
                },
                { label: "数量", name: "RawMaterialDosage", index: "RawMaterialDosage", width: 150, align: "left" },
                {
                    label: "单位", name: "RawMaterialId", index: "RawMaterialId", width: 100, align: "left",
                    formatter: function (cellvalue, options, rowObject) {
                        var a = "";
                        $.ajax({
                            url: "../../SteelMember/RawMaterialLibrary/GetUnitName",
                            data: { keyValue: cellvalue },
                            type: "get",
                            dataType: "text",
                            async: false,
                            success: function (data) {
                                a = data;
                            },

                        })
                        return a;
                    }
                }
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'Id',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $("#" + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $("#" + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            $gridTable.jqGrid('setGridParam', {
                url: "../../SteelMember/RawMaterialAnalysis/GetPageListJson",
                postData: {
                    parentid: _parentId,
                    //condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                    keyword: $("#txt_Keyword").val()
                }
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: "Form",
            title: '新增原材料',
            url: '/SteelMember/RawMaterialAnalysis/Form?parentId=' + _parentId,
            width: "600px",
            height: "330px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    };
    //编辑
    function btn_edit() {
        var keyValue = $("#gridTable").jqGridRowValue("Id");
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: "Form",
                title: '编辑原材料',
                url: '/SteelMember/RawMaterialAnalysis/Form?keyValue=' + keyValue,
                width: "600px",
                height: "330px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    };
    //删除
    function btn_delete() {
        var keyValue = $("#gridTable").jqGridRowValue("Id");
        if (keyValue) {
            $.RemoveForm({
                url: "../../SteelMember/RawMaterialAnalysis/RemoveForm",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#gridTable").trigger("reloadGrid");
                }
            })
        } else {
            dialogMsg('请选择需要删除的数据项！', 0);
        }
    }
</script>
<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-west">
        <div class="west-Panel">
            <div class="panel-Title">工程目录</div>
            <div id="itemTree"></div>
        </div>
    </div>
    <div class="ui-layout-center">
        <div class="center-Panel">
            <div class="panel-Title">分析列表</div>
            <div class="titlePanel">
                <div class="title-search">
                    <table>
                        <tr>
                            @*<td>
                                    <div id="queryCondition" class="btn-group">
                                        <a class="btn btn-default">型号</a>
                                    </div>
                                </td>*@
                            <td style="padding-left: 2px;">
                                <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询的型号" style="width: 200px;" />
                            </td>
                            <td style="padding-left: 5px;">
                                <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="toolbar">
                    <div class="btn-group">
                        <a id="lr-replace" class="btn btn-default" onclick="reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                        <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                        <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                    </div>
                    <script>$('.toolbar').authorizeButton()</script>
                </div>
            </div>
            <div class="gridPanel">
                <table id="gridTable"></table>
                <div id="gridPager"></div>
            </div>
        </div>
    </div>
</div>
