@{
    ViewBag.Title = "审核页面";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script>
    $(function () {
        InitialPage();
        GetTree();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //layout布局
        $('#layout').layout({
            applyDemoStyles: true,
            onresize: function () {
                $(window).resize()
            }
        });
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $("#gridTable").setGridHeight($(window).height() - 110);
                $("#itemTree").setTreeHeight($(window).height() - 52);
            }, 200);
            e.stopPropagation();
        });
    }

    //加载树
    var _Category;
    var HavesChildren;
    function GetTree() {
        var item = {
            height: $(window).height() - 52,
            param: { Levels: 2 },
            url: '../../SteelMember/SubProject/GetTreeJson',
            onnodeclick: function (item) {
                _Category = item.value;
                HavesChildren = item.hasChildren;
                //if (!HavesChildren) {
                //    $('#btn_Search').trigger("click");
                //}
                //$('#btn_Search').trigger("click");

                query();
            }
        };
        //初始化
        $("#itemTree").treeview(item);
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 110,
            url: "../../SteelMember/RawMaterialAnalysis/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: "主键", name: "Id", index: "Id", hidden: true },
                { label: "原材料类型", name: "RawMaterialCategory", index: "RawMaterialCategory", width: 150, align: "left" },
                { label: "规格或型号", name: "RawMaterialStandard", index: "RawMaterialStandard", width: 150, align: "left" },
                { label: "数量", name: "RawMaterialDosage", index: "RawMaterialDosage", width: 150, align: "left" },
                { label: "单位", name: "RawMaterialUnit", index: "RawMaterialUnit", width: 100, align: "left" },
                { label: "说明", name: "Description", index: "Description", width: 100, align: "left" }
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'Id',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            multiselect: true,
            multiboxonly: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
                //var s;
                //s = $('#gridTable').jqGrid('getGridParam', 'selarrrow');
                var id = $('#gridTable').jqGridRowValue('Id');
                alert(id);

            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
    }

    function query() {
        var queryJson = {
            //condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
            category: _Category,
            //rawMaterialModel: $("#txt_Keyword").val()
        }
        $('#gridTable').jqGrid('setGridParam', {
            postData: { queryJson: JSON.stringify(queryJson) },
            page: 1
        }).trigger('reloadGrid');
    }
</script>

<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-west">
        <div class="west-Panel">
            <div class="panel-Title">工程目录</div>
            <div id="itemTree"></div>
        </div>
    </div>
    <div class="ui-layout-center">
        <div class="center-Panel">
            <div class="panel-Title">分析列表</div>
            <div class="gridPanel">
                <table id="gridTable"></table>
                <div id="gridPager"></div>
            </div>
        </div>
    </div>
</div>
