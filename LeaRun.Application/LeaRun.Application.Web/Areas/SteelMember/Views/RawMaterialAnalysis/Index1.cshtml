    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');

        var queryJson = {
            HavesChildren: HavesChildren,
            SubProjectId: SubProjectId,
        }
        $gridTable.jqGrid('setGridParam', {
            postData: { queryJson: JSON.stringify(queryJson) },
            page: 1
        }).trigger('reloadGrid');

        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 170,
            url: "../../SteelMember/RawMaterialAnalysis/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: "工程", name: "Category", index: "Category", hidden: true },
                { label: "材料类型", name: "RawMaterialCategory", index: "RawMaterialCategory", width: 70, align: "center", sortable: true, },
                { label: "材料名称", name: "RawMaterialName", index: "RawMaterialName", width: 140, align: "center", sortable: true, },
                { label: "牌号/规格", name: "RawMaterialModel", index: "RawMaterialModel", width: 150, align: "left", sortable: false },
                { label: "计量单位", name: "RawMaterialUnit", index: "RawMaterialUnit", width: 70, align: "center", sortable: false },
                { label: "需求总量", name: "RawMaterialDosage", index: "RawMaterialDosage", width: 80, align: "center", sortable: true },
                { label: "变更数量", name: "ChangeQuantity", index: "ChangeQuantity", width: 80, align: "center", sortable: true },
                {
                    label: "提交状态", name: "IsSubmitReview", index: "IsSubmitReview", width: 70, align: "center", sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: "审核状态", name: "IsPassed", index: "IsPassed", width: 70, align: "center", sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "<span class=\"label label-info\">未审核</span>";
                        } else if (cellvalue == 1) {
                            return "<span class=\"label label-success\">通过</span>";
                        } else {
                            return "<span class=\"label label-danger\">失败</span>";
                        }
                    }
                },
                {
                    label: '更新时间', name: 'UpdateTime', index: 'UpdateTime', width: 80, align: 'center', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return formatDate(cellvalue, 'yyyy-MM-dd');//'yyyy-MM-dd hh:mm:ss'
                    }
                },
                //{ label: '已成订单量', name: 'ApplicationPurchasedQuantity', width: 80, index: 'OrderQuantityed', align: 'center',sortable: false,},
                //{ label: '已申请量', name: 'PurchasedQuantity', width: 80, index: 'ProductionNumber', align: 'center', sortable: false, },
                { label: '已使用量', name: 'WarehousedQuantity', width: 80, index: 'CollarNumbered', align: 'center', sortable: false, },
                {
                    label: '备注', name: 'Description', index: 'Description', width: 200, align: 'center', sortable: false,
                    formatter: function (cellvalue, options, rowObject) {
                        if (rowObject.Description == null || rowObject.Description == "undefined") {
                            return "";
                        } else {
                            return "<p style='color: red'>" + cellvalue + "</p>";
                        }
                    }
                },
                { label: "主键", name: "Id", index: "Id", hidden: true },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'UpdateTime',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            multiselect: true,
