    //新增
    function btn_add() {
        if (!HavesChildren) {
            dialogOpen({
                id: 'Form',
                title: '添加材料需求',
                url: '/SteelMember/RawMaterialAnalysis/Form?category=' + escape(SubProjectId),
                width: '500px',
                height: '360px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        } else {
            dialogMsg("请选择子级工程", 0);
        }
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('Id');
        var review = $('#gridTable').jqGridRowValue('IsSubmitReview');
        var passed = $('#gridTable').jqGridRowValue('IsPassed');
        if (checkedRow(keyValue)) {
            if (review != "<i class=\"fa fa-toggle-on\"></i>" || passed == "<span class=\"label label-danger\">失败</span>") {
                dialogOpen({
                    id: 'Form',
                    title: '编辑材料需求',
                    url: '/SteelMember/RawMaterialAnalysis/Form?keyValue=' + keyValue,
                    width: '500px',
                    height: '360px',
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })
            } else {
                dialogMsg("已提交的数据只有审核失败后才能作编辑！", 0);
            }
        }
    }

    //变更设计
    function btn_editChange() {
        var keyValue = $('#gridTable').jqGridRowValue('Id');
        var review = $('#gridTable').jqGridRowValue('IsSubmitReview');
        var passed = $('#gridTable').jqGridRowValue('IsPassed');
        if (checkedRow(keyValue)) {
            //if (review != "<i class=\"fa fa-toggle-on\"></i>" || passed == "<span class=\"label label-danger\">失败</span>") {
                dialogOpen({
                    id: 'ChangeForm',
                    title: '变更材料需求',
                    url: '/SteelMember/RawMaterialAnalysis/ChangeForm?keyValue=' + keyValue,
                    width: '610px',
                    height: '360px',
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })
            //} else {
            //    dialogMsg("已提交的数据只有审核失败后才能作编辑！", 0);
            //}
        }
    }

    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('Id');
        var review = $('#gridTable').jqGridRowValue('IsSubmitReview');
        var passed = $('#gridTable').jqGridRowValue('IsPassed');
        if (checkedArray(keyValue)) {
            if (review != "<i class=\"fa fa-toggle-on\"></i>" || passed == "<span class=\"label label-danger\">失败</span>") {
                $.RemoveForm({
                    url: '../../SteelMember/RawMaterialAnalysis/RemoveForm',
                    param: { keyValue: keyValue },
                    success: function (data) {
                        $('#gridTable').trigger('reloadGrid');
                    }
                })
            } else {
                dialogMsg("已提交的数据只有审核失败后才能做修改！", 0);
                return false;
            }
        }
    }
    //提交
    function btn_submitReview() {
        var keyValues = $('#gridTable').jqGridRowValue('Id');
        var reviews = $('#gridTable').jqGridRowValue('IsSubmitReview');
        if (checkedArray(keyValues)) {
            var reviewsArr = reviews.split(",");
            if (reviewsArr.length > 0) {
                for (var i in reviewsArr) {
                    if (reviewsArr[i] == "<i class=\"fa fa-toggle-on\"></i>") {
                        dialogMsg("所选数据中包含已提交的数据，请重新选择！", 0);
                        return false;
                        break;
                    }
                }
            }
            dialogConfirm("注：您确定要提交所选中的数据吗？", function (r) {
                if (r) {
                    Loading(true, "正在提交...");
                    window.setTimeout(function () {
                        $.ajax({
                            url: "../../SteelMember/RawMaterialAnalysis/SubmitReview",
                            data: { keyValues: keyValues },
                            type: "post",
                            dataType: "json",
                            success: function (data) {
                                if (data.type == "3") {
                                    dialogAlert(data.message, -1);
                                } else {
                                    Loading(false);
                                    dialogMsg(data.message, 1);
                                }
                                $('#gridTable').trigger('reloadGrid');
                            }
                        });
                    }, 500);
                }
            });
        }
    }
    //审核
    function btn_passed(type) {
        var keyValue = $('#gridTable').jqGridRowValue('Id');
        var reviews = $('#gridTable').jqGridRowValue('IsSubmitReview');
        var passeds = $('#gridTable').jqGridRowValue('IsPassed');
        if (checkedArray(keyValue)) {
            var reviewsArr = reviews.split(",");
            var passedsArr = passeds.split(",");
            if (reviewsArr.length > 0) {
                for (var i in reviewsArr) {
                    if (reviewsArr[i] == "<i class=\"fa fa-toggle-off\"></i>") {
                        dialogMsg("所选数据中包含未提交的数据，请重新选择！", 0);
                        return false;
                        break;
                    }
                }
            }
            if (passedsArr.length > 0) {
                for (var i in passedsArr) {
                    if (passedsArr[i] == "<span class=\"label label-success\">通过</span>" || passedsArr[i] == "<span class=\"label label-danger\">失败</span>") {
                        dialogMsg("所选数据中包含已审核的数据，请重新选择！", 0);
                        return false;
                        break;
                    }
                }
            }
            var message = "";
            if (type == 1) {
                message = "注：您确定要对所选中的数据进行审核通过吗？";
            } else {
                message = "注：您确定要对所选中的数据进行审核失败吗？";
            }
            dialogConfirm(message, function (r) {
                if (r) {
                    Loading(true, "正在处理...");
                    window.setTimeout(function () {
                        if (type == 1) {
                            $.SaveForm({
                                url: "../../SteelMember/RawMaterialAnalysis/ReviewOperation?keyValue=" + keyValue + "&type=" + type,
                                param: {},
                                loading: "正在保存数据...",
                                success: function () {
                                    $.currentIframe().$("#gridTable").trigger("reloadGrid");
                                }
                            })
                        } else {
                            dialogOpen({
                                id: 'NotReviewForm',
                                title: '失败原因',
                                url: '/SteelMember/RawMaterialAnalysis/NotReviewForm?keyValue=' + keyValue + "&type=" + type,
                                width: '400px',
                                height: '300px',
                                callBack: function (iframeId) {
                                    top.frames[iframeId].AcceptClick();
                                }
                            });
                        }


                        //$.ajax({
                        //    url: "../../SteelMember/RawMaterialAnalysis/ReviewOperation",
                        //    data: { keyValues: keyValues, type: type },
                        //    type: "post",
                        //    dataType: "json",
                        //    success: function (data) {
                        //        if (data.type == "3") {
                        //            dialogAlert(data.message, -1);
                        //        } else {
                        //            Loading(false);
                        //            dialogMsg(data.message, 1);
                        //        }
                        //        $('#gridTable').trigger('reloadGrid');
                        //    }
                        //});
                    }, 500);
                }
            });
        }
    }

    //导出
    function btn_derive() {
        var time = new Date();
        var ExportFileName = "材料需求_" + time.getFullYear() + time.getMonth() + time.getDate() + time.getHours() + time.getMinutes() + time.getSeconds();
        var ExportTableTitle = "材料需求表";

        if (SubProjectId != null) {
            dialogOpen({
                id: "ExcelIExportDialog",
                title: '导出Excel数据',
                url: '/Utility/ExcelExportTemplateForm?gridId=' + "gridTable" + "&SubProjectId=" + SubProjectId + "&ExportFileName=" + escape(ExportFileName) + "&ExportTableTitle=" + escape(ExportTableTitle),
                width: "400px",
                height: "380px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }, btn: ['导出Excel', '关闭']
            });
        } else {
            dialogMsg("请要导出的工程", 0);
        }
    }

    //查询
    function Search() {
        dialogOpen({
            id: "AdvancedSearchForm",
            title: '高级查询',
            url: '/Utility/AdvancedSearchForm?SubProjectId=' + SubProjectId + '&HavesChildren=' + _HavesChildren,
            width: "670px",
            height: "180px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            },
            btn: null,
        });
    }
</script>

