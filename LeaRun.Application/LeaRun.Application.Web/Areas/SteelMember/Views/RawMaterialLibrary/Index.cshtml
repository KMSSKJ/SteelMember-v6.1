                btn: null
            });
        } else {
            dialogMsg('请选择材料类型！', 0);
        }
    }
  

    //导出
    function btn_derive() {
        dialogOpen({
            id: "ExcelIExportDialog",
            title: '导出Excel数据',
            url: '/Utility/ExcelExportForm?gridId=' + "gridTable" + "&filename=" + escape("材料信息浏览表"),
            width: "500px",
            height: "380px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }, btn: ['导出Excel', '关闭']
        });
    }

    function Search() {
        dialogOpen({
