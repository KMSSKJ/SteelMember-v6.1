    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');

        var queryJson = {
            SubProjectId: _Category,
        }
        $gridTable.jqGrid('setGridParam', {
            postData: { queryJson: JSON.stringify(queryJson) },
            page: 1
        }).trigger('reloadGrid');

        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 170,
            url: "../../SteelMember/RawMaterialLibrary/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: "主键", name: "RawMaterialId", index: "RawMaterialId", hidden: true },
                //{ label: "类型", name: "Category", index: "Category", width: 150, align: "center" },
                { label: "材料名称", name: "RawMaterialName", index: "RawMaterialName", width: 180, align: "center" },
                { label: "规格/型号", name: "RawMaterialModel", index: "RawMaterialModel", width: 180, align: "center" },
                { label: "计量单位", name: "Unit", index: "Unit", width: 120, align: "center" },
                {
                    label: "添加时间", name: "UpdateTime", index: "UpdateTime", width: 80, align: "center",
                    formatter: function (cellvalue, options, rowObject) {
                        return formatDate(cellvalue, 'yyyy-MM-dd');//'yyyy-MM-dd hh:mm:ss'
                    }},
                { label: "备注", name: "Description", index: "Description", width: 200, align: "center" }
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            //sortname: 'RawMaterialModel',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $("#" + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $("#" + this.id).setSelection(selectedRowIndex, false);
            }
        });
