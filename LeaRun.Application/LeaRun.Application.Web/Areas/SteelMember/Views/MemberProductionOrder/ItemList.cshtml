                //{ label: '规格或型号', name: "MemberModel", align:' center',width: 80, sortable: false},
                { label: '需求量', name: "MemberNumber", align: ' center', width: 50, sortable: false },
                { label: '单位', name: "MemberUnit", align:' center',width: 50, sortable: false},
            ],
