            if (_ContactPersonTel == undefined || _ContactPersonTel == "" || _ContactPersonTel == null) {
                dialogMsg('请录入联系人电话！', 0);
                return false;
            } else if (_ContactPersonTel.length != 13 && _ContactPersonTel.length != 11) {
                dialogMsg('请录入电话(****-********)或手机格式！', 0);
