@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>;
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 108.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 108.5,
            url: "../../SteelMember/ProjectInfo/GetListJson",
            datatype: "json",
            colModel: [
                { label: 'TreeID', name: 'TreeID', index: 'TreeID', width: 100, align: 'left',sortable: true  },
                { label: 'ProjectId', name: 'ProjectId', index: 'ProjectId', width: 100, align: 'left',sortable: true  },
                { label: 'ProjectName', name: 'ProjectName', index: 'ProjectName', width: 100, align: 'left',sortable: true  },
                { label: 'ProjectSystemTitel', name: 'ProjectSystemTitel', index: 'ProjectSystemTitel', width: 100, align: 'left',sortable: true  },
                { label: 'ProjectLogo', name: 'ProjectLogo', index: 'ProjectLogo', width: 100, align: 'left',sortable: true  },
                { label: 'ProjectBackground', name: 'ProjectBackground', index: 'ProjectBackground', width: 100, align: 'left',sortable: true  },
                { label: 'State', name: 'State', index: 'State', width: 100, align: 'left',sortable: true  },
                { label: 'ProjectAddress', name: 'ProjectAddress', index: 'ProjectAddress', width: 100, align: 'left',sortable: true  },
                { label: 'ConstructionPermitId', name: 'ConstructionPermitId', index: 'ConstructionPermitId', width: 100, align: 'left',sortable: true  },
                { label: 'ConstructionUnit', name: 'ConstructionUnit', index: 'ConstructionUnit', width: 100, align: 'left',sortable: true  },
                { label: 'ConstructionPrincipal', name: 'ConstructionPrincipal', index: 'ConstructionPrincipal', width: 100, align: 'left',sortable: true  },
                { label: 'ConstructionPrincipalTEL', name: 'ConstructionPrincipalTEL', index: 'ConstructionPrincipalTEL', width: 100, align: 'left',sortable: true  },
                { label: 'DesignUnit', name: 'DesignUnit', index: 'DesignUnit', width: 100, align: 'left',sortable: true  },
                { label: 'DesignPrincipal', name: 'DesignPrincipal', index: 'DesignPrincipal', width: 100, align: 'left',sortable: true  },
                { label: 'DesignPrincipalTEL', name: 'DesignPrincipalTEL', index: 'DesignPrincipalTEL', width: 100, align: 'left',sortable: true  },
                { label: 'SupervisionUnit', name: 'SupervisionUnit', index: 'SupervisionUnit', width: 100, align: 'left',sortable: true  },
                { label: 'SupervisionPrincipal', name: 'SupervisionPrincipal', index: 'SupervisionPrincipal', width: 100, align: 'left',sortable: true  },
                { label: 'SupervisionPrincipalTEL', name: 'SupervisionPrincipalTEL', index: 'SupervisionPrincipalTEL', width: 100, align: 'left',sortable: true  },
                { label: 'GeneralContractor', name: 'GeneralContractor', index: 'GeneralContractor', width: 100, align: 'left',sortable: true  },
                { label: 'GeneralContractorPrincipal', name: 'GeneralContractorPrincipal', index: 'GeneralContractorPrincipal', width: 100, align: 'left',sortable: true  },
                { label: 'GeneralContractorPrincipalTEL', name: 'GeneralContractorPrincipalTEL', index: 'GeneralContractorPrincipalTEL', width: 100, align: 'left',sortable: true  },
                { label: 'ProfessionalContractor', name: 'ProfessionalContractor', index: 'ProfessionalContractor', width: 100, align: 'left',sortable: true  },
                { label: 'ProfessionalContractorPrincipal', name: 'ProfessionalContractorPrincipal', index: 'ProfessionalContractorPrincipal', width: 100, align: 'left',sortable: true  },
                { label: 'ProfessionalContractorPrincipalTEL', name: 'ProfessionalContractorPrincipalTEL', index: 'ProfessionalContractorPrincipalTEL', width: 100, align: 'left',sortable: true  },
            ],
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加项目信息',
            url: '/SteelMember/ProjectInfo/ProjectInfoForm',
            width: 'px',
            height: 'px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('ProjectId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑项目信息',
                url: '/SteelMember/ProjectInfo/ProjectInfoForm?keyValue=' + keyValue,
                width: 'px',
                height: 'px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('ProjectId');
        if (keyValue) {
            $.RemoveForm({
                url: '../../SteelMember/ProjectInfo/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的项目信息！', 0);
        }
    }
</script>
<div class="titlePanel">
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
</div>
