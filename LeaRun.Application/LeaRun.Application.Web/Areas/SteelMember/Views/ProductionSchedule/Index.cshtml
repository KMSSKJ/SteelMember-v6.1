@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<script>
    $(function () {
        InitialPage();
        GetTree();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //layout布局
        $('#layout').layout({
            applyDemoStyles: true,
            onresize: function () {
                $(window).resize()
            }
        });
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $("#gridTable").setGridHeight($(window).height() - 170);
                $("#itemTree").setTreeHeight($(window).height() - 52);
            }, 200);
            e.stopPropagation();
        });
    }

    //加载树
    var _Category;
    var HavesChildren;
    function GetTree() {
        var item = {
            height: $(window).height() - 52,
            param: { Levels: 2 },
            url: '../../SteelMember/SubProject/GetTreeJson',
            onnodeclick: function (item) {
                _Category = item.value;
                HavesChildren = item.hasChildren;
                $('#btn_Search').trigger("click");
            }
        };
        //初始化
        $("#itemTree").treeview(item);
    }

    //加载表格
    var subgrid_table_id;
    var a = 0;
    var OrderId;
    function GetGrid(obj) {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../SteelMember/MemberProductionOrder/GetPageListJson?IsReceive=1",
            datatype: "json",
            colModel: [
                { label: '主键', name: 'OrderId', index: 'OrderId', width: 0, align: '', sortable: true, hidden: true },
                { label: '订单编号', name: 'OrderNumbering', index: 'OrderNumbering', width: 190, align: '', sortable: true },
                { label: '制单人', name: 'CreateMan', index: 'CreateMan', width: 100, align: '', sortable: true },
                { label: '制单时间', name: 'CreateTime', index: 'CreateTime', width: 80, align: '', sortable: true },
                {
                    label: '优先级', name: 'Priority', index: 'Priority', width: 100, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: '是否专用', name: 'IsDedicated', index: 'IsDedicated', width: 100, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: '材料领取状态', name: 'IsReceiveRawMaterial', index: 'IsReceiveRawMaterial', width: 100, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "<span class=\"label label-info\">未领取</span>";
                        } else if (cellvalue == 1) {
                            return "<span class=\"label label-success\">已领取</span>";
                        }
                    }
                },
                {
                    label: '生产状态', name: 'ProductionStatus', index: 'ProductionStatus', width: 100, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "<span class=\"label label-info\">未生产</span>";
                        } else if (cellvalue == 1) {
                            return "<span class=\"label label-danger\">正在生产</span>";
                        } else {
                            return "<span class=\"label label-success\">已完成</span>";
                        }
                    }
                },
                {
                    label: '工厂质检', name: 'SelfDetectStatus', index: 'SelfDetectStatus', width: 100, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "<span class=\"label label-info\">未进行</span>";
                        } else if (cellvalue == 1) {
                            return "<span class=\"label label-danger\">质检中</span>";
                        } else {
                            return "<span class=\"label label-success\">已完成</span>";
                        }
                    }
                },
                {
                    label: '监理质检', name: 'QualityInspectionStatus', index: 'QualityInspectionStatus', width: 100, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "<span class=\"label label-info\">未进行</span>";
                        } else if (cellvalue == 1) {
                            return "<span class=\"label label-danger\">质检中</span>";
                        } else {
                            return "<span class=\"label label-success\">已完成</span>";
                        }
                    }
                }, {
                    label: '打包', name: 'IsPackage', align: ' center', width: 80, sortable: false,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "<span class=\"label label-info\">未进行</span>";
                        } else if (cellvalue == 1) {
                            return "<span class=\"label label-success\">已完成</span>";
                        }
                    }
                },
                //{ label: '审核人', name: 'ReviewMan', index: 'ReviewMan', width: 100, align: '', sortable: true },
                //{ label: '审核时间', name: 'ReviewTime', index: 'ReviewTime', width: 100, align: '', sortable: true },
                { label: '备注', name: 'Description', index: 'Description', width: 100, align: '', sortable: true },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'OrderId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
                LoadChart();
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            },
            subGrid: false,
            subGridRowExpanded: function (subgrid_id, row_id) {
                if (a != 0) {

                    $("#gridTable").collapseSubGridRow(a);
                }

                OrderId = $gridTable.jqGrid('getRowData', row_id)['OrderId'];
               // subgrid_table_id = subgrid_id + "_t";
                //$("#" + subgrid_id).html("<table id='" + subgrid_table_id + "'></table>");
                //$("#" + subgrid_table_id).jqGrid({
                //    url: "../../SteelMember/MemberProductionOrder/GetDetailsJson",
                //    postData: { keyValue: OrderId },
                //    datatype: "json",
                //    height: "100%",
                //    colModel: [
                //        { label: 'InfoId', name: 'InfoId', index: 'InfoId', width: 80, align: '', sortable: true, hidden: true },
                //        { label: 'OrderId', name: 'OrderId', index: 'OrderId', width: 80, align: '', sortable: true, hidden: true },
                //        { label: 'MemberId', name: 'MemberId', index: 'MemberId', width: 80, align: '', sortable: true, hidden: true },
                //        { label: '构件编号', name: "MemberNumbering", align: ' center', width: 180, sortable: false },
                //        { label: '构件名称', name: "MemberName", align: ' center', width: 150, sortable: false },
                //        { label: '单位', name: "MemberUnit", align: ' center', width: 80, sortable: false, align: 'center' },
                //        { label: '需生产数量', name: 'MemberNumber', align: ' center', width: 80, sortable: false },
                //        { label: '已生产数量', name: 'ProductionedQuantity', align: ' center', width: 80, sortable: false },
                //        { label: '工厂质检合格量', name: 'SelfDetectNumber', align: ' center', width: 80, sortable: false },
                //        { label: '工厂质检情况', name: 'SelfDetectRemarks', align: ' center', width: 80, sortable: false },
                //        { label: '监理质检合格量', name: 'QualityInspectionNumber', align: ' center', width: 80, sortable: false },
                //        { label: '监理质检情况', name: 'QualityInspectionRemarks', align: ' center', width: 80, sortable: false },

                //    ],
                //    caption: "明细",
                //    rowNum: "1000",
                //    rownumbers: true,
                //    shrinkToFit: false,
                //    gridview: true,
                //    hidegrid: false
                //});
                a = row_id;
            }
        });

        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                keyword: $("#txt_Keyword").val(),
                SubProjectId: _Category,
                BeginTime: $("#txt_BeginTime").val(),
                EndTime: $("#txt_EndTime").val()
            };
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });

        switch (obj) {
            case "Search":
                $('#btn_Search').trigger("click");
                break;
        }
    }

     //加载图表
    function LoadChart() {
        var keyValue = $('#gridTable').jqGridRowValue('OrderId');
        dialogOpen({
            id: 'Schedule',
            title: '生产进度',
            url: '/SteelMember/ProductionSchedule/Schedule?keyValue=' + keyValue,
            width: '1000px',
            height: '660px',
            btn: null,
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
</script>

<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-west">
        <div class="west-Panel">
            <div class="panel-Title">工程目录</div>
            <div id="itemTree"></div>
        </div>
    </div>
    <div class="ui-layout-center">
        <div class="center-Panel">
            <div class="panel-Title">生产信息</div>
            <div class="titlePanel">
                <div class="title-search">
                    <table>
                        <tr>
                            <td>
                                <label>时间(起)</label>
                            </td>
                            <td>
                                <input id="txt_BeginTime" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker()" />
                            </td>
                            <td>
                                <label style="margin-left:5px">时间(束)</label>
                            </td>
                            <td>
                                <input id="txt_EndTime" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker()" />
                            </td>
                            <td style="padding-left: 10px;">
                                <div id="queryCondition" class="btn-group">
                                    <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择条件</a>
                                    <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a data-value="OrderNumbering">编号</a></li>
                                    </ul>
                                </div>
                            </td>
                            <td style="padding-left: 2px;">
                                <input id="txt_Keyword" onkeyup="GetGrid('Search')" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                            </td>

                            <td style="padding-left: 5px;">
                                <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="toolbar">
                    <div class="btn-group">
                        <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                        <a id="lr-receiveOrder" class="btn btn-default" onclick="btn_receiveOrder()"><i class="fa fa-plus"></i>&nbsp;领取订单</a>
                        <a id="lr-receiveRawMaterial" class="btn btn-default" onclick="btn_receiveRawMaterial()"><i class="fa fa-pencil-square-o"></i>&nbsp;领取材料</a>
                        <a id="lr-productionCompleted" class="btn btn-default" onclick="btn_productionCompleted()"><i class="fa fa-pencil-square-o"></i>&nbsp;生产完成</a>
                    </div>
                    <div class="btn-group">
                        <a id="lr-factoryQualityInspection" class="btn btn-default" onclick="btn_factoryQualityInspection()"><i class="fa fa-pencil-square-o"></i>&nbsp;厂方质检</a>
                        <a id="lr-supervisionQualityInspection" class="btn btn-default" onclick="btn_supervisionQualityInspection()"><i class="fa fa-pencil-square-o"></i>&nbsp;监理质检</a>
                        @*<a id="lr-factoryQualityInspection" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-legal"></i>&nbsp;厂方质检<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li id="lr-successFactory"><a onclick="btn_factoryQualityInspection(1)"><i class="fa fa-check"></i>&nbsp;合格</a></li>
                                <li id="lr-dangerFactory"><a onclick="btn_factoryQualityInspection(2)"><i class="fa fa-close"></i>&nbsp;不合格</a></li>
                            </ul>*@
                        @*</div>
                            <div class="btn-group">*@
                        @*<a id="lr-supervisionQualityInspection" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-legal"></i>&nbsp;监理检查<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li id="lr-successSupervision"><a onclick="btn_supervisionQualityInspection(1)"><i class="fa fa-check"></i>&nbsp;合格</a></li>
                                <li id="lr-dangerSupervision"><a onclick="btn_supervisionQualityInspection(2)"><i class="fa fa-close"></i>&nbsp;不合格</a></li>
                            </ul>*@
                    </div>
                    <div class="btn-group">
                        <a id="lr-memberPacking" class="btn btn-default" onclick="btn_package()"><i class="fa fa-send"></i>&nbsp;构件打包</a>
                        <a id="lr-barcodePrinting" class="btn btn-default" onclick="btn_print()"><i class="fa fa-list-alt"></i>&nbsp;条码打印</a>
                    </div>
                </div>
                <script>$('.toolbar').authorizeButton()</script>
            </div>
        </div>
        <div class="gridPanel">
            <table id="gridTable"></table>
            <div id="gridPager"></div>
        </div>
     
    </div>
</div>
