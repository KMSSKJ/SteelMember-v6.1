    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('MemberDemandId');
        var IsSubmit = $('#gridTable').jqGridRowValue('IsSubmit');
        var IsReview = $('#gridTable').jqGridRowValue('IsReview');
        if (checkedRow(keyValue)) {
            if (IsSubmit != "<i class=\"fa fa-toggle-on\"></i>" || IsReview == "<span class=\"label label-danger\">失败</span>") {
                dialogOpen({
                    id: 'Form',
                    title: '编辑构件需求',
                    url: '/SteelMember/MemberDemand/Form?keyValue=' + keyValue,
                    width: '420px',
                    height: '310px',
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })
            } else {
                dialogMsg("已提交的数据只有审核失败后才能作编辑！", 0);
            }
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('MemberDemandId');
        var IsSubmit = $('#gridTable').jqGridRowValue('IsSubmit');
        var IsReview = $('#gridTable').jqGridRowValue('IsReview');
        if (checkedRow(keyValue)) {
            if (IsSubmit != "<i class=\"fa fa-toggle-on\"></i>" || IsReview == "<span class=\"label label-danger\">失败</span>") {
                $.RemoveForm({
                    url: '../../SteelMember/MemberDemand/RemoveForm',
                    param: { keyValue: keyValue },
                    success: function (data) {
                        $('#gridTable').trigger('reloadGrid');
                    }
                })
            } else {
                dialogMsg("已提交的数据只有审核失败后才能作编辑！", 0);
            }
        }
    }

    // 提交
    function btn_submitReview() {
        var keyValues = $('#gridTable').jqGridRowValue('MemberDemandId');
        var IsSubmit = $('#gridTable').jqGridRowValue('IsSubmit');
        if (checkedArray(keyValues)) {
            var reviewsArr = IsSubmit.split(",");
            if (reviewsArr.length > 0) {
                for (var i in reviewsArr) {
                    if (reviewsArr[i] == "<i class=\"fa fa-toggle-on\"></i>") {
                        dialogMsg("所选数据中包含已提交的数据，请重新选择！", 0);
                        return false;
                        //break;
                    }
                }
            }
            dialogConfirm("注：您确定要提交所选中的数据吗？", function (r) {
                if (r) {
                    Loading(true, "正在提交...");
                    window.setTimeout(function () {
                        $.ajax({
                            url: "../../SteelMember/MemberDemand/SubmitReview",
                            data: { keyValues: keyValues },
                            type: "post",
                            dataType: "json",
                            success: function (data) {
                                if (data.type == "3") {
                                    dialogAlert(data.message, -1);
                                } else {
                                    Loading(false);
                                    dialogMsg(data.message, 1);
                                }
                                $('#gridTable').trigger('reloadGrid');
                            }
                        });
                    }, 500);
                }
            });
        }
    }



    //审核信息
    function btn_review(type) {
        var keyValue = $("#gridTable").jqGridRowValue("MemberDemandId");
        var reviews = $('#gridTable').jqGridRowValue('IsReview');
        var passeds = $('#gridTable').jqGridRowValue('IsSubmit');
        if (checkedArray(keyValue)) {
            var reviewsArr = reviews.split(",");
            var passedsArr = passeds.split(",");
            if (passedsArr.length > 0) {
                for (var i in passedsArr) {
                    if (passedsArr[i] == "<i class=\"fa fa-toggle-off\"></i>") {
                        dialogMsg("所选数据中包含未提交的数据，请重新选择！", 0);
                        return false;
                        //break;
                    }
                }
            }
            if (reviewsArr.length > 0) {
                for (var i in reviewsArr) {
                    if (reviewsArr[i] == "<span class=\"label label-success\">通过</span>" || reviewsArr[i] == "<span class=\"label label-danger\">失败</span>") {
                        dialogMsg("所选数据中包含已审核的数据，请重新选择！", 0);
                        return false;
                        //break;
                    }
                }
            }
            var message = "";
            if (type == 1) {
                message = "注：您确定要对所选中的数据进行审核通过吗？";
            } else {
                message = "注：您确定要对所选中的数据进行审核失败吗？";
            }
            dialogConfirm(message, function (r) {
                if (r) {
                    Loading(true, "正在处理...");
                    window.setTimeout(function () {
                        if (type == 1) {
                            $.ajax({
                                url: "../../SteelMember/MemberDemand/ReviewMemberDemand",
                                data: { keyValue: keyValue, type: type }, 
                                type: "post",
                                dataType: "json",
                                success: function (data) {
                                    if (data.type == "3") {
                                        dialogAlert(data.message, -1);
                                    } else {
                                        Loading(false);
                                        dialogMsg(data.message, 1);
                                    }
                                    $('#gridTable').trigger('reloadGrid');
                                }
                            });
                            //    $.SaveForm({
                            //        url: "../../SteelMember/ProductionProcess/ConfirmOrder?keyValues=" + keyValues,
                            //        param: {},
                            //        loading: "正在保存数据...",
                            //        success: function () {
                            //            $.currentIframe().$("#gridTable").trigger("reloadGrid");
                            //        }
                            //    })
                        } else {
                            dialogOpen({
                                id: 'NotReviewForm',
                                title: '失败原因',
                                url: '/SteelMember/MemberDemand/NotReviewForm?keyValue=' + keyValue + "&type=" + type,
                                width: '400px',
                                height: '300px',
                                callBack: function (iframeId) {
                                    top.frames[iframeId].AcceptClick();
                                }
                            });
                        }
                    }, 500);
                }
            });
        }
    }

