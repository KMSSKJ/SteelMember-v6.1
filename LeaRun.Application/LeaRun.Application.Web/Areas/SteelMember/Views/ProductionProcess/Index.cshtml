@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script>
    ;
    $(function () {
        InitialPage();
        GetTree();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //layout布局
        $('#layout').layout({
            applyDemoStyles: true,
            onresize: function () {
                $(window).resize()
            }
        });
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $("#gridTable").setGridHeight($(window).height() - 170);
                $("#itemTree").setTreeHeight($(window).height() - 52);
            }, 200);
            e.stopPropagation();
        });
    }

    //加载树
    var _Category;
    var HavesChildren;
    function GetTree() {
        var item = {
            height: $(window).height() - 52,
            param: { Levels: 2 },
            url: '../../SteelMember/SubProject/GetTreeJson',
            onnodeclick: function (item) {
                _Category = item.value;
                HavesChildren = item.hasChildren;
                $('#btn_Search').trigger("click");
            }
        };
        //初始化
        $("#itemTree").treeview(item);
    }

    //加载表格
    var subgrid_table_id;
    var a = 0;
    var OrderId;
    function GetGrid(obj) {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../SteelMember/MemberProductionOrder/GetPageListJson?IsReceive=1",
            datatype: "json",
            colModel: [
                { label: '主键', name: 'OrderId', index: 'OrderId', width: 0, align: '', sortable: true, hidden: true },
                { label: '订单编号', name: 'OrderNumbering', index: 'OrderNumbering', width: 190, align: '', sortable: true },
                { label: '制单人', name: 'CreateMan', index: 'CreateMan', width: 100, align: '', sortable: true },
                { label: '制单时间', name: 'CreateTime', index: 'CreateTime', width: 80, align: '', sortable: true },
                {
                    label: '优先级', name: 'Priority', index: 'Priority', width: 100, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: '是否专用', name: 'IsDedicated', index: 'IsDedicated', width: 100, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: '材料领取状态', name: 'IsReceiveRawMaterial', index: 'IsReceiveRawMaterial', width: 100, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "<span class=\"label label-info\">未领取</span>";
                        } else if (cellvalue == 1) {
                            return "<span class=\"label label-success\">已领取</span>";
                        }
                    }
                },
                {
                    label: '生产状态', name: 'ProductionStatus', index: 'ProductionStatus', width: 100, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "<span class=\"label label-info\">未生产</span>";
                        } else if (cellvalue == 1) {
                            return "<span class=\"label label-danger\">正在生产</span>";
                        } else {
                            return "<span class=\"label label-success\">已完成</span>";
                        }
                    }
                },
                {
                    label: '工厂质检', name: 'SelfDetectStatus', index: 'SelfDetectStatus', width: 100, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "<span class=\"label label-info\">未进行</span>";
                        } else if (cellvalue == 1) {
                            return "<span class=\"label label-danger\">质检中</span>";
                        } else {
                            return "<span class=\"label label-success\">已完成</span>";
                        }
                    }
                },
                {
                    label: '监理质检', name: 'QualityInspectionStatus', index: 'QualityInspectionStatus', width: 100, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "<span class=\"label label-info\">未进行</span>";
                        } else if (cellvalue == 1) {
                            return "<span class=\"label label-danger\">质检中</span>";
                        } else {
                            return "<span class=\"label label-success\">已完成</span>";
                        }
                    }
                }, {
                    label: '打包', name: 'IsPackage', align: ' center', width: 80, sortable: false,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "<span class=\"label label-info\">未进行</span>";
                        } else if (cellvalue == 1) {
                            return "<span class=\"label label-success\">已完成</span>";
                        }
                    }
                },
                //{ label: '审核人', name: 'ReviewMan', index: 'ReviewMan', width: 100, align: '', sortable: true },
                //{ label: '审核时间', name: 'ReviewTime', index: 'ReviewTime', width: 100, align: '', sortable: true },
                { label: '备注', name: 'Description', index: 'Description', width: 100, align: '', sortable: true },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'OrderId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            },
            subGrid: true,
            subGridRowExpanded: function (subgrid_id, row_id) {
                if (a != 0) {

                    $("#gridTable").collapseSubGridRow(a);
                }

                OrderId = $gridTable.jqGrid('getRowData', row_id)['OrderId'];
                subgrid_table_id = subgrid_id + "_t";
                $("#" + subgrid_id).html("<table id='" + subgrid_table_id + "'></table>");
                $("#" + subgrid_table_id).jqGrid({
                    url: "../../SteelMember/MemberProductionOrder/GetDetailsJson",
                    postData: { keyValue: OrderId },
                    datatype: "json",
                    height: "100%",
                    colModel: [
                        { label: 'InfoId', name: 'InfoId', index: 'InfoId', width: 80, align: '', sortable: true, hidden: true },
                        { label: 'OrderId', name: 'OrderId', index: 'OrderId', width: 80, align: '', sortable: true, hidden: true },
                        { label: 'MemberId', name: 'MemberId', index: 'MemberId', width: 80, align: '', sortable: true, hidden: true },
                        { label: '构件编号', name: "MemberNumbering", align: ' center', width: 180, sortable: false },
                        { label: '构件名称', name: "MemberName", align: ' center', width: 150, sortable: false },
                        { label: '单位', name: "MemberUnit", align: ' center', width: 80, sortable: false, align: 'center' },
                        { label: '需生产数量', name: 'MemberNumber', align: ' center', width: 80, sortable: false },
                        { label: '已生产数量', name: 'ProductionedQuantity', align: ' center', width: 80, sortable: false },
                        { label: '工厂质检合格量', name: 'SelfDetectNumber', align: ' center', width: 80, sortable: false },
                        { label: '工厂质检情况', name: 'SelfDetectRemarks', align: ' center', width: 80, sortable: false },
                        { label: '监理质检合格量', name: 'QualityInspectionNumber', align: ' center', width: 80, sortable: false },
                        { label: '监理质检情况', name: 'QualityInspectionRemarks', align: ' center', width: 80, sortable: false },

                    ],
                    caption: "明细",
                    rowNum: "1000",
                    rownumbers: true,
                    shrinkToFit: false,
                    gridview: true,
                    hidegrid: false
                });
                a = row_id;
            }
        });

        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                //condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                condition: "OrderNumbering",
                keyword: $("#txt_Keyword").val(),
                SubProjectId: _Category,
                BeginTime: $("#txt_BeginTime").val(),
                EndTime: $("#txt_EndTime").val()
            };
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });

        switch (obj) {
            case "Search":
                $('#btn_Search').trigger("click");
                break;
        }
    }

    //领取订单
    function btn_receiveOrder() {
        dialogOpen({
            id: 'ReceiveOrderIndex',
            title: '领取订单',
            url: '/SteelMember/ProductionProcess/ReceiveOrderIndex?category=' + _Category,
            width: '1000px',
            height: '750px',
            btn: null,
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }

    //领取材料
    function btn_receiveRawMaterial() {
        var keyValue = $('#gridTable').jqGridRowValue('OrderId');
        var IsReceiveRawMaterial = $('#gridTable').jqGridRowValue('IsReceiveRawMaterial');
        IsReceiveRawMaterial=IsReceiveRawMaterial == "<span class=\"label label-success\">已领取</span>"?1:0;

        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'ReceiveRawMaterialIndex',
                title: '领取材料',
                url: '/SteelMember/ProductionProcess/ReceiveRawMaterialIndex?keyValue=' + keyValue + '&IsReceiveRawMaterial=' + IsReceiveRawMaterial,
                width: '1000px',
                height: '750px',
                //btn: null,
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    }

    //生产填报
    function btn_productionCompleted() {
        var keyValue = $('#gridTable').jqGridRowValue('OrderId');
        var IsReceiveRawMaterial = $('#gridTable').jqGridRowValue('IsReceiveRawMaterial');
        if (checkedRow(keyValue)) {
            if (IsReceiveRawMaterial == "<span class=\"label label-success\">已领取</span>") {
                dialogOpen({
                    id: 'Form',
                    title: '生产填报',
                    url: '/SteelMember/ProductionProcess/ProductionNumberForm?keyValue=' + keyValue,
                    width: '1000px',
                    height: '750px',
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })
            } else {
                dialogMsg("生产材料未领取", 0)
            }
        }
    }

    //工厂自检填报
    function btn_factoryQualityInspection() {
        var keyValue = $('#gridTable').jqGridRowValue('OrderId');
        var ProductionStatus = $('#gridTable').jqGridRowValue('ProductionStatus');
        if (checkedRow(keyValue)) {
            if (ProductionStatus = "<span class=\"label label-success\">已完成</span>") {
                dialogOpen({
                    id: 'Form',
                    title: '工厂自检填报',
                    url: '/SteelMember/ProductionProcess/SelfDetectForm?keyValue=' + keyValue,
                    width: '1000px',
                    height: '750px',
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })
            }
        }
        else {
            dialogMsg('构件生产未完成', 0);
        }
    }

    //监理质检填报
    function btn_supervisionQualityInspection() {
        var keyValue = $('#gridTable').jqGridRowValue('OrderId');
        var SelfDetectStatus = $('#gridTable').jqGridRowValue('SelfDetectStatus');
        if (checkedRow(keyValue)) {
            if (SelfDetectStatus = "<span class=\"label label-success\">已完成</span>") {
                dialogOpen({
                    id: 'Form',
                    title: '监理质检填报',
                    url: '/SteelMember/ProductionProcess/QualityInspectionForm?keyValue=' + keyValue,
                    width: '1000px',
                    height: '750px',
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })
            } else {
                dialogMsg('工厂质检未完成', 0);
            }
        }
    }

    //打包
    function btn_package() {
        var keyValue = $("#gridTable").jqGridRowValue("OrderId");
        var QualityInspectionStatus = $('#QualityInspectionStatus').jqGridRowValue('QualityInspectionStatus');
        if (checkedArray(keyValue)) {
            if (QualityInspectionStatus == "<span class=\"label label-success\">已完成</span>") {
                dialogMsg("监理质检未完成", 0);
                return false;
            }
            $.SaveForm({
                url: "../../SteelMember/ProductionProcess/Package?keyValue=" + keyValue,
                param: {},
                loading: "正在处理...",
                success: function () {
                    $.currentIframe().$("#gridTable").trigger("reloadGrid");
                }
            })
        }
    }

    //二维码信息及打印
    function btn_print() {
        if (subgrid_table_id != undefined) {
            var IsPackage = $('#QualityInspectionStatus').jqGridRowValue('IsPackage');
            var keyValue = GetJqGridRowValue("#" + subgrid_table_id, "MemberId");
            var QualityInspectionNumber = GetJqGridRowValue("#" + subgrid_table_id, "QualityInspectionNumber");
            var MemberNumber = GetJqGridRowValue("#" + subgrid_table_id, "MemberNumber");
            if (checkedRow(keyValue)) {
                if (QualityInspectionNumber == MemberNumber && IsPackage == "<span class=\"label label-success\">已完成</span>") {
                    dialogOpen({
                        id: 'QRCodeForm',
                        title: '打印信息',
                        url: '/SteelMember/ProductionProcess/QRCodeForm?keyValue=' + keyValue + "&OrderId=" + OrderId,
                        width: '500px',
                        height: '400px',
                        callBack: function (iframeId) {
                            top.frames[iframeId].AcceptClick();
                        }
                    })
                } else {
                    dialogMsg("构件打包未完成", 0);
                }
            } else {
                dialogMsg("请选择构件", 0);
            }
        } else {
            dialogMsg("请选择订单下的构件", 0);
        }
    };

    //详细
    function btn_details() {
        var keyValue = $('#gridTable').jqGridRowValue('OrderId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '详细构件生产订单',
                url: '/SteelMember/ProductionProcess/Form?keyValue=' + keyValue + '&isDeltail=true',
                width: '1000px',
                height: '750px',
                btn: null,
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }

    // 提交
    function btn_submitReview() {
        var keyValues = $('#gridTable').jqGridRowValue('OrderId');
        var reviews = $('#gridTable').jqGridRowValue('IsSubmit');
        if (checkedArray(keyValues)) {
            var reviewsArr = reviews.split(",");
            if (reviewsArr.length > 0) {
                for (var i in reviewsArr) {
                    if (reviewsArr[i] == "<i class=\"fa fa-toggle-on\"></i>") {
                        dialogMsg("所选数据中包含已提交的数据，请重新选择！", 0);
                        return false;
                        break;
                    }
                }
            }
            dialogConfirm("注：您确定要提交所选中的数据吗？", function (r) {
                if (r) {
                    Loading(true, "正在提交...");
                    window.setTimeout(function () {
                        $.ajax({
                            url: "../../SteelMember/ProductionProcess/SubmitReview",
                            data: { keyValues: keyValues },
                            type: "post",
                            dataType: "json",
                            success: function (data) {
                                if (data.type == "3") {
                                    dialogAlert(data.message, -1);
                                } else {
                                    Loading(false);
                                    dialogMsg(data.message, 1);
                                }
                                $('#gridTable').trigger('reloadGrid');
                            }
                        });
                    }, 500);
                }
            });
        }
    }

    //审核
    function btn_passed(type) {
        var keyValues = $('#gridTable').jqGridRowValue('OrderId');
        var reviews = $('#gridTable').jqGridRowValue('IsSubmit');
        var passeds = $('#gridTable').jqGridRowValue('IsPassed');
        if (checkedArray(keyValues)) {
            var reviewsArr = reviews.split(",");
            var passedsArr = passeds.split(",");
            if (reviewsArr.length > 0) {
                for (var i in reviewsArr) {
                    if (reviewsArr[i] == "<i class=\"fa fa-toggle-off\"></i>") {
                        dialogMsg("所选数据中包含未提交的数据，请重新选择！", 0);
                        return false;
                        break;
                    }
                }
            }
            if (passedsArr.length > 0) {
                for (var i in passedsArr) {
                    if (passedsArr[i] == "<span class=\"label label-success\">通过</span>" || passedsArr[i] == "<span class=\"label label-danger\">失败</span>") {
                        dialogMsg("所选数据中包含已审核的数据，请重新选择！", 0);
                        return false;
                        break;
                    }
                }
            }
            var message = "";
            if (type == 1) {
                message = "注：您确定要对所选中的数据进行审核通过吗？";
            } else {
                message = "注：您确定要对所选中的数据进行审核失败吗？";
            }
            dialogConfirm(message, function (r) {
                if (r) {
                    Loading(true, "正在处理...");
                    window.setTimeout(function () {
                        $.ajax({
                            url: "../../SteelMember/ProductionProcess/ReviewOperation",
                            data: { keyValues: keyValues, type: type },
                            type: "post",
                            dataType: "json",
                            success: function (data) {
                                if (data.type == "3") {
                                    dialogAlert(data.message, -1);
                                } else {
                                    Loading(false);
                                    dialogMsg(data.message, 1);
                                }
                                $('#gridTable').trigger('reloadGrid');
                            }
                        });
                    }, 500);
                }
            });
        }
    }
</script>

