    //初始化页面
    function InitialPage() {
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $("#gridTable").setGridHeight($(window).height() - 170);
                //$("#itemTree").setTreeHeight($(window).height() - 52);
            }, 200);
            e.stopPropagation();
        });
    }
  
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 170,
            url: "../../SteelMember/ProductionProcess/GetPageListSummaryJson",
            datatype: "json",
            colModel: [
                { label: '主键', name: 'MemberId', index: 'MemberId', hidden: true },
                { label: '外键', name: 'SubProjectId', index: 'SubProjectId', hidden: true },
                { label: '编号', name: 'MemberNumbering', index: 'MemberNumbering', width: 150, align: 'left', sortable: true },
                { label: '构件类型', name: 'Category', index: 'Category', width: 100, align: 'left', sortable: true },
                { label: '构件名称', name: 'MemberName', index: 'MemberName', width: 100, align: 'left', sortable: true },
                { label: '构件单位', name: 'UnitId', index: 'UnitId', width: 80, align: 'left', sortable: true },
                { label: '计划生产量', name: 'ProductionNumber', index: 'ProductionNumber', width: 80, align: 'left', sortable: true },
                { label: '已合格量', name: 'QualityInspectionNumber', index: 'QualityInspectionNumber', width: 80, align: 'left', sortable: true },
                {
                    label: '更新时间', name: 'CreateTime', index: 'CreateTime', width: 80, align: 'left', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return formatDate(cellvalue, 'yyyy-MM-dd');//'yyyy-MM-dd hh:mm:ss'
                    }},
                {
                    label: '备注', name: 'Description', index: 'Description', width: 200, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        if (rowObject.Description == null || rowObject.Description == "undefined") {
                            return "";
                        } else {
                            return "<p style='color: red'>" + cellvalue + "</p>";
                        }
                    }
                },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'OrderId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            multiselect: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                //condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                //SubProjectId: SubProjectId,
                //keyword: $("#txt_Keyword").val(),
                BeginTime: $("#txt_BeginTime").val(),
                EndTime: $("#txt_EndTime").val()
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
      }
  
    //构件图纸/模型管理
    function btn_drawing() {
        var KeyValue = $("#gridTable").jqGridRowValue("MemberId");
        if (checkedRow(KeyValue)) {
            dialogOpen({
                id: "DrawingManagement",
                title: '构件信息',
                url: '../../SteelMember/MemberLibrary/DrawingManagement?KeyValue=' + KeyValue,
                width: "705px",
                height: "675px",
                btn: null
            });
        }
    }

    //导出
    function btn_derive() {
        dialogOpen({
            id: "ExcelIExportDialog",
            title: '导出Excel数据',
            url: '/Utility/ExcelExportForm?gridId=' + "gridTable" + "&filename=" + escape("构件信息导出"),
            width: "500px",
            height: "380px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }, btn: ['导出Excel', '关闭']
        });
    }
    //构件分类
    function btn_membercategory() {
        dialogOpen({
            id: "MemberCategoryIndex",
            title: '构件分类',
            url: '/SteelMember/MemberLibrary/MemberCategoryIndex',
            width: "800px",
            height: "500px",
            btn: null
        });
    };
</script>

