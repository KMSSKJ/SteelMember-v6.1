@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>;
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 108.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 108.5,
            url: "../../SteelMember/ProjectDemand/GetListJson",
            datatype: "json",
            colModel: [
                { label: 'ProjectDemandId', name: 'ProjectDemandId', index: 'ProjectDemandId', width: 100, align: 'left',sortable: true ,hidden: true },
                { label: 'TreeId', name: 'TreeId', index: 'TreeId', width: 100, align: 'left',sortable: true ,hidden: true },
                { label: 'MemberId', name: 'MemberId', index: 'MemberId', width: 100, align: 'left',sortable: true ,hidden: true },
                { label: '构件规格或型号', name: 'MemberModel', index: 'MemberModel', width: 100, align: 'left',sortable: true  },
                { label: '构件编号', name: 'MemberNumbering', index: 'MemberNumbering', width: 100, align: 'left',sortable: true  },
                { label: '构件类型', name: 'MemberClassId', index: 'MemberClassId', width: 100, align: 'left',sortable: true  },
                { label: '构件单位', name: 'UnitId', index: 'UnitId', width: 100, align: 'left',sortable: true  },
                { label: '审核', name: 'IsReview', index: 'IsReview', width: 100, align: 'left',sortable: true  },
                { label: '审核人', name: 'ReviewMan', index: 'ReviewMan', width: 100, align: 'left',sortable: true  },
                { label: '提交', name: 'IsSubmit', index: 'IsSubmit', width: 100, align: 'left',sortable: true  },
                { label: '备注', name: 'Description', index: 'Description', width: 100, align: 'left',sortable: true  },
                { label: 'TreeId', name: 'TreeId', index: 'TreeId', width: 100, align: 'left',sortable: true  },
                { label: 'TreeId', name: 'TreeId', index: 'TreeId', width: 100, align: 'left',sortable: true  },
                { label: 'ProductionNumber', name: 'ProductionNumber', index: 'ProductionNumber', width: 100, align: 'left',sortable: true  },
                { label: '需求量', name: 'MemberNumber', index: 'MemberNumber', width: 100, align: 'left',sortable: true  },
                { label: '创建时间', name: 'CreateTime', index: 'CreateTime', width: 100, align: 'left',sortable: true  },
                { label: '已领用量', name: 'CollarNumbered', index: 'CollarNumbered', width: 100, align: 'left',sortable: true  },
                { label: '创建人', name: 'CreateMan', index: 'CreateMan', width: 100, align: 'left',sortable: true  },
            ],
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加构件需求',
            url: '/SteelMember/ProjectDemand/Form',
            width: 'px',
            height: 'px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('ProjectDemandId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑构件需求',
                url: '/SteelMember/ProjectDemand/Form?keyValue=' + keyValue,
                width: 'px',
                height: 'px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('ProjectDemandId');
        if (keyValue) {
            $.RemoveForm({
                url: '../../SteelMember/ProjectDemand/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的构件需求！', 0);
        }
    }
</script>
<div class="titlePanel">
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
</div>
