@{
    ViewBag.Title = "部门管理";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        InitialPage_dep();
        GetGrid_dep();
    });
    //初始化页面
    function InitialPage_dep() {
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable_dep').setGridWidth(($('.gridPanel').width()));
                $("#gridTable_dep").setGridHeight($(window).height() - 136.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid_dep() {
        var selectedRowIndex = 0;
        var $gridTable_dep = $('#gridTable_dep');
        $gridTable_dep.jqGrid({
            url: "../../BaseManage/Department/GetTreeListJson",
            datatype: "json",
            treeGrid: true,
            height: $(window).height() - 136.5,            
            autowidth: true,
            shrinkToFit: false,
            gridview: true,
            treeGridModel: "nested",
            ExpandColumn: "FullName",
            colModel: [
                { label: 'DepartmentId', name: 'DepartmentId', hidden: true },
                { label: 'OrganizeId', name: 'OrganizeId', hidden: true },
                { label: 'Sort', name: 'Sort', hidden: true },
                { label: "部门名称", name: "FullName", width: 300, align: "left", sortable: false },
                { label: "负责人", name: "Manager", width: 100, align: "left", sortable: false },
                { label: "联系电话", name: "OuterPhone", width: 150, align: "left", sortable: false },
                { label: "备注", name: "Description", width: 100, align: "left", sortable: false }
            ],
            onSelectRow: function (rowid) {
                selectedRowIndex = $("#" + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $("#" + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询条件设置
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            $gridTable_dep.jqGrid('setGridParam', {
                postData: {
                    condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                    keyword: $("#txt_Keyword").val()
                }
            }).trigger('reloadGrid');
        });
        //查询回车事件
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    //新增
    function btn_add() {
        var keyValue = $("#gridTable_dep").jqGridRowValue("DepartmentId");
        var organizeId = $("#gridTable_dep").jqGridRowValue("OrganizeId");
        var parentId = $("#gridTable_dep").jqGridRowValue("DepartmentId");
        var sort = $("#gridTable_dep").jqGridRowValue("Sort");
        if (sort == 'Organize') {
            parentId = 0;
        }
        dialogOpen({
            id: "Form",
            title: '添加部门',
            url: '/BaseManage/Department/Form?departmentId=' + keyValue + "&organizeId=" + organizeId + "&parentId=" + parentId,
            width: "700px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    };
    //获取当前表格的所有数据
    function getJQAllData() {
        var o = jQuery("#gridTable_dep");
        //获取当前显示的数据
        var rows = o.jqGrid('getRowData');
        var rowNum = o.jqGrid('getGridParam', 'rowNum'); //获取显示配置记录数量
        var total = o.jqGrid('getGridParam', 'records'); //获取查询得到的总记录数量
        //设置rowNum为总记录数量并且刷新jqGrid，使所有记录现出来调用getRowData方法才能获取到所有数据
        o.jqGrid('setGridParam', { rowNum: total }).trigger('reloadGrid');
        var rows = o.jqGrid('getRowData');  //此时获取表格所有匹配的
        o.jqGrid('setGridParam', { rowNum: rowNum }).trigger('reloadGrid'); //还原原来显示的记录数量
        return rows;
    }
    //编辑
    function btn_edit() {
        var keyValue = $("#gridTable_dep").jqGridRowValue("DepartmentId");
        if (checkedRow(keyValue)) {
            var sort = $("#gridTable_dep").jqGridRowValue("Sort");
            if (sort == 'Organize') {
                return false;
            }
            dialogOpen({
                id: "Form",
                title: '编辑部门',
                url: '/BaseManage/Department/Form?keyValue=' + keyValue,
                width: "700px",
                height: "400px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $("#gridTable_dep").jqGridRowValue("DepartmentId");
        if (keyValue) {
            var sort = $("#gridTable_dep").jqGridRowValue("Sort");
            if (sort == 'Organize') {
                return false;
            }
            $.RemoveForm({
                url: "../../BaseManage/Department/RemoveForm",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#gridTable_dep").resetSelection();
                    $("#gridTable_dep").trigger("reloadGrid");
                }
            })
        } else {
            dialogMsg('请选择需要删除的部门！', 0);
        }
    }
</script>
<div class="titlePanel">
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
</div>
<div class="gridPanel">
    <table class="form" id="gridTable_dep"></table>
</div>
