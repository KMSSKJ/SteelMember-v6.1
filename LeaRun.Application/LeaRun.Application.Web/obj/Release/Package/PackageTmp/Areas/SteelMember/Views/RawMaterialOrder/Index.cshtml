@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script>
    ;
    $(function () {
        InitialPage();
        GetTree();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //layout布局
        $('#layout').layout({
            applyDemoStyles: true,
            onresize: function () {
                $(window).resize()
            }
        });
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $("#gridTable").setGridHeight($(window).height() - 170);
                $("#itemTree").setTreeHeight($(window).height() - 52);
            }, 200);
            e.stopPropagation();
        });
    }

    //加载树
    var _Category;
    var HavesChildren;
    function GetTree() {
        var item = {
            height: $(window).height() - 52,
            param: { Levels: 2 },
            url: '../../SteelMember/SubProject/GetTreeJson',
            onnodeclick: function (item) {
                _Category = item.value;
                HavesChildren = item.hasChildren;
                $('#btn_Search').trigger("click");
            }
        };
        //初始化
        $("#itemTree").treeview(item);
    }

    //加载表格
    function GetGrid(obj) {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 170,
            url: "../../SteelMember/RawMaterialOrder/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: '主键', name: 'OrderId', index: 'OrderId', width: 0, align: '', sortable: true, hidden: true },
                { label: '订单编号', name: 'OrderNumbering', index: 'OrderNumbering', width: 190, align: '', sortable: true },
                { label: '制单人', name: 'CreateMan', index: 'CreateMan', width: 80, align: '', sortable: true },
                { label: '制单时间', name: 'CreateTime', index: 'CreateTime', width: 80, align: '', sortable: true },
                {
                    label: '优先级', name: 'Priority', index: 'Priority', width: 80, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: '是否专用', name: 'IsDedicated', index: 'IsDedicated', width: 80, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: '提交状态', name: 'IsSubmit', index: 'IsSubmit', width: 80, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: '审核状态', name: 'IsPassed', index: 'IsPassed', width: 80, align: '', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 0) {
                            return "<span class=\"label label-info\">未审核</span>";
                        } else if (cellvalue == 1) {
                            return "<span class=\"label label-success\">通过</span>";
                        } else {
                            return "<span class=\"label label-danger\">失败</span>";
                        }
                    }
                },
                { label: '审核人', name: 'ReviewMan', index: 'ReviewMan', width: 80, align: '', sortable: true },
                { label: '审核时间', name: 'ReviewTime', index: 'ReviewTime', width: 80, align: '', sortable: true },
                { label: '备注', name: 'Description', index: 'Description', width: 80, align: '', sortable: true },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'OrderId',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            },
            subGrid: true,
            subGridRowExpanded: function (subgrid_id, row_id) {
                var keyValue = $gridTable.jqGrid('getRowData', row_id)['OrderId'];
                var subgrid_table_id = subgrid_id + "_t";
                $("#" + subgrid_id).html("<table id='" + subgrid_table_id + "'></table>");
                $("#" + subgrid_table_id).jqGrid({
                    url: "../../SteelMember/RawMaterialOrderInfo/GetListJson",
                    postData: { keyValue: keyValue },
                    datatype: "json",
                    height: "100%",
                    colModel: [
                        { label: 'InfoId', name: 'InfoId', align: 'center', width: 80, sortable: false, hidden: true },
                        { label: 'RawMaterialId', name: 'RawMaterialId', align: 'center', width: 80, sortable: false, hidden: true },
                        { label: 'OrderId', name: 'OrderId', index: 'OrderId', width: 80, sortable: true, hidden: true },
                        { label: '型号/规格', name: 'RawMaterialModel', align: 'center', width: 100, sortable: false },
                        { label: '材料名称', name: 'RawMaterialName', align: 'center', width: 150, sortable: false },
                        { label: '单位', name: 'UnitName', align: 'center', width: 80, sortable: false },
                        { label: '数量', name: 'RawMaterialNumber', align: 'center', width: 80, sortable: false },
                        //{ label: '单价', name: 'Price', align: ' center', width: 80, sortable: false },
                        //{ label: '金额', name: 'PriceAmount', align: ' center', width: 120, sortable: false },
                    ],
                    caption: "明细",
                    rowNum: "1000",
                    rownumbers: true,
                    shrinkToFit: false,
                    gridview: true,
                    hidegrid: false
                });
            }
        });

        //查询条件
        $("#queryCondition .dropdown-menu li").click(function () {
            var text = $(this).find('a').html();
            var value = $(this).find('a').attr('data-value');
            $("#queryCondition .dropdown-text").html(text).attr('data-value', value)
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
               // condition: $("#queryCondition").find('.dropdown-text').attr('data-value'),
                condition:"OrderNumbering",
                keyword: $("#txt_Keyword").val(),
                SubProjectId: _Category,
                BeginTime: $("#txt_BeginTime").val(),
                EndTime: $("#txt_EndTime").val()
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });

        switch (obj) {
            case "Search":
                $('#btn_Search').trigger("click");
                break;
        }
    }
   
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加材料订单',
            url: '/SteelMember/RawMaterialOrder/Form?category=' + _Category,
            width: '1000px',
            height: '750px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('OrderId');
        var IsReview = $('#gridTable').jqGridRowValue('IsPassed');
        var IsSubmit = $('#gridTable').jqGridRowValue('IsSubmit');
        if (checkedRow(keyValue)) {
            if (IsSubmit != "<i class=\"fa fa-toggle-on\"></i>" || IsReview == "<span class=\"label label-danger\">失败</span>") {
                dialogOpen({
                    id: 'Form',
                    title: '编辑材料订单',
                    url: '/SteelMember/RawMaterialOrder/Form?keyValue=' + keyValue,
                    width: '1000px',
                    height: '750px',
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })
            } else {
                dialogMsg("已提交的数据只有审核失败后才能作编辑！", 0);
            }
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('OrderId');
        var IsReview = $('#gridTable').jqGridRowValue('IsPassed');
        var IsSubmit = $('#gridTable').jqGridRowValue('IsSubmit');
        if (checkedRow(keyValue)) {
            if (IsSubmit != "<i class=\"fa fa-toggle-on\"></i>" || IsReview == "<span class=\"label label-danger\">失败</span>") {
                $.RemoveForm({
                    url: '../../SteelMember/RawMaterialOrder/RemoveForm',
                    param: { keyValue: keyValue },
                    success: function (data) {
                        $('#gridTable').trigger('reloadGrid');
                    }
                })
            } else {
                dialogMsg("已提交的数据只有审核失败后才能作编辑！", 0);
            }
        }
    }
    //详细
    function btn_details() {
        var keyValue = $('#gridTable').jqGridRowValue('OrderId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '详细材料订单',
                url: '/SteelMember/RawMaterialOrder/Form?keyValue=' + keyValue + '&isDeltail=true',
                width: '1000px',
                height: '750px',
                btn: null,
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    // 提交
    function btn_submitReview() {
        var keyValues = $('#gridTable').jqGridRowValue('OrderId');
        var reviews = $('#gridTable').jqGridRowValue('IsSubmit');
        if (checkedArray(keyValues)) {
            var reviewsArr = reviews.split(",");
            if (reviewsArr.length > 0) {
                for (var i in reviewsArr) {
                    if (reviewsArr[i] == "<i class=\"fa fa-toggle-on\"></i>") {
                        dialogMsg("所选数据中包含已提交的数据，请重新选择！", 0);
                        return false;
                        break;
                    }
                }
            }
            dialogConfirm("注：您确定要提交所选中的数据吗？", function (r) {
                if (r) {
                    Loading(true, "正在提交...");
                    window.setTimeout(function () {
                        $.ajax({
                            url: "../../SteelMember/RawMaterialOrder/SubmitReview",
                            data: { keyValues: keyValues },
                            type: "post",
                            dataType: "json",
                            success: function (data) {
                                if (data.type == "3") {
                                    dialogAlert(data.message, -1);
                                } else {
                                    Loading(false);
                                    dialogMsg(data.message, 1);
                                }
                                $('#gridTable').trigger('reloadGrid');
                            }
                        });
                    }, 500);
                }
            });
        }
    }

    //审核
    function btn_passed(type) {
        var keyValues = $('#gridTable').jqGridRowValue('OrderId');
        var reviews = $('#gridTable').jqGridRowValue('IsSubmit');
        var passeds = $('#gridTable').jqGridRowValue('IsPassed');
        if (checkedArray(keyValues)) {
            var reviewsArr = reviews.split(",");
            var passedsArr = passeds.split(",");
            if (reviewsArr.length > 0) {
                for (var i in reviewsArr) {
                    if (reviewsArr[i] == "<i class=\"fa fa-toggle-off\"></i>") {
                        dialogMsg("所选数据中包含未提交的数据，请重新选择！", 0);
                        return false;
                        break;
                    }
                }
            }
            if (passedsArr.length > 0) {
                for (var i in passedsArr) {
                    if (passedsArr[i] == "<span class=\"label label-success\">通过</span>" || passedsArr[i] == "<span class=\"label label-danger\">失败</span>") {
                        dialogMsg("所选数据中包含已审核的数据，请重新选择！", 0);
                        return false;
                        break;
                    }
                }
            }
            var message = "";
            if (type == 1) {
                message = "注：您确定要对所选中的数据进行审核通过吗？";
            } else {
                message = "注：您确定要对所选中的数据进行审核失败吗？";
            }
            dialogConfirm(message, function (r) {
                if (r) {
                    Loading(true, "正在处理...");
                    window.setTimeout(function () {
                        $.ajax({
                            url: "../../SteelMember/RawMaterialOrder/ReviewOperation",
                            data: { keyValues: keyValues, type: type },
                            type: "post",
                            dataType: "json",
                            success: function (data) {
                                if (data.type == "3") {
                                    dialogAlert(data.message, -1);
                                } else {
                                    Loading(false);
                                    dialogMsg(data.message, 1);
                                }
                                $('#gridTable').trigger('reloadGrid');
                            }
                        });
                    }, 500);
                }
            });
        }
    }

    //input改变事件
    function InputChange() {
        $('#btn_Search').trigger("click");
    }
</script>

<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="ui-layout-west">
        <div class="west-Panel">
            <div class="panel-Title">工程目录</div>
            <div id="itemTree"></div>
        </div>
    </div>
    <div class="ui-layout-center">
        <div class="center-Panel">
            <div class="panel-Title">订单列表</div>
            <div class="titlePanel">
                <div class="title-search" style="padding-top:15px">
                    <table>
                        <tr>
                            <td style="width:110px">
                                <input id="txt_BeginTime" type="text" class="form-control input-wdatepicker" placeholder="选择开始时间"  onfocus="WdatePicker()" onblur="InputChange()" />
                            </td>
                            <td style="padding-left:2px;width:110px">
                                <input id="txt_EndTime" type="text" class="form-control input-wdatepicker" placeholder="选择结束时间" onfocus="WdatePicker()" onblur="InputChange()"/>
                            </td>

                            @*<td style="padding-left: 10px;">
                                <div id="queryCondition" class="btn-group">
                                    <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择条件</a>
                                    <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a data-value="Category">构件类型</a></li>
                                        <li><a data-value="MemberName">构件名称</a></li>
                                        <li><a data-value="OrderNumbering">编号</a></li>
                                    </ul>
                                </div>
                            </td>*@
                            <td style="padding-left: 5px;width:110px">
                                <input id="txt_Keyword" onkeyup="GetGrid('Search')" type="text" class="form-control" placeholder="输入要查询编号"/>
                            </td>
                            <td style="padding-left: 5px;display:none">
                                <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="toolbar">
                    <div class="btn-group">
                        <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                        <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                        <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                        <a id="lr-details" class="btn btn-default" onclick="btn_details()"><i class="fa fa-list-alt"></i>详细</a>
                        <a id="lr-submitReview" class="btn btn-default" onclick="btn_submitReview()"><i class="fa fa-send"></i>&nbsp;提交</a>
                        <a id="lr-passed" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-legal"></i>&nbsp;审核<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li id="lr-success"><a onclick="btn_passed(1)"><i class="fa fa-check"></i>&nbsp;通过</a></li>
                            <li id="lr-danger"><a onclick="btn_passed(2)"><i class="fa fa-close"></i>&nbsp;失败</a></li>
                        </ul>

                    </div>
                    <script>$('.toolbar').authorizeButton()</script>
                </div>
            </div>
            <div class="gridPanel">
                <table id="gridTable"></table>
                <div id="gridPager"></div>
            </div>
        </div>
    </div>
</div>
