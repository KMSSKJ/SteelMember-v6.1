@{
    ViewBag.Title = "更多待办事项";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $("#gridTable").setGridHeight($(window).height() - 136.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $grid = $("#gridTable");
        $grid.jqGrid({
            url: "/Home/GetToBeDoneMore",
            datatype: "json",
            height: $(window).height() - 136.5,
            autowidth: true,
            colModel: [
                { label: '主键', name: 'Id', hidden: true },
                { label: '', name: 'Type', hidden: true },
                {
                    label: '待办标题', name: 'FullHead', index: 'FullHead', width: 300, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        return '<p style="color: ' + rowObject.FullHeadColor + ';">' + cellvalue + '</p>';
                    }
                },
                { label: '待办类别', name: 'Category', index: 'Category', width: 100, align: 'center' },
                {
                    label: "更新时间", name: "ReleaseTime", index: "ReleaseTime", width: 140, align: "center",
                    formatter: function (cellvalue, options, rowObject) {
                        return formatDate(cellvalue, 'yyyy-MM-dd hh:mm');
                    }
                },
                //{ label: '信息来源', name: 'SourceName', index: 'SourceName', width: 100, align: 'center' },
                //{ label: '阅读次数', name: 'PV', index: 'PV', width: 80, align: 'center' },
                {
                    label: "状态", name: "EnabledMark", index: "EnabledMark", width: 80, align: "center", autowidth: false,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 1) {
                            return "<span class=\"label label-success\">已完成</span>";
                        } else {
                            return "<span class=\"label label-danger\">未完成</span>";
                        }
                    }
                }
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $grid.getGridParam('selrow');
                btn_details();
            },
            gridComplete: function () {
                $grid.setSelection(selectedRowIndex, false);
            }
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                FullHead: $("#txt_Keyword").val()
            }
            $grid.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
            }).trigger('reloadGrid');
        });
    }

    //详细
    function btn_details() {
        var keyValue = $("#gridTable").jqGridRowValue("Id");
        var type = $("#gridTable").jqGridRowValue("Type");
        if (checkedRow(keyValue)) {
            if (type == "RawMaterialAnalysis") {
                dialogOpen({
                    id: 'Index',
                    title: '材料需求',
                    url: '/SteelMember/RawMaterialAnalysis/Index',
                    width: '1000px',
                    height: '750px',
                    btn: null,
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })
            } else if (type == "RawMaterialOrder") {
                dialogOpen({
                    id: 'FormDetail',
                    title: '材料申购单',
                    url: '/SteelMember/RawMaterialOrder/FormDetail?keyValue=' + keyValue,
                    width: '1000px',
                    height: '750px',
                    btn: null,
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })

            } else if (type == "RawMaterialPurchase") {
                dialogOpen({
                    id: 'Form',
                    title: '采购单详情',
                    url: '/SteelMember/RawMaterialPurchase/Detail?keyValue=' + keyValue,
                    width: '1150px',
                    height: '800px',
                    btn: null,
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })

            } else if (type == "MemberDemand") {
                dialogOpen({
                    id: 'Index',
                    title: '构件需求',
                    url: '/SteelMember/MemberDemand/Index',
                    width: '1000px',
                    height: '750px',
                    btn: null,
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })
            } else if (type == "MemberOrder") {
                dialogOpen({
                    id: 'Form',
                    title: '构件生产申请单',
                    url: '/SteelMember/MemberProductionOrder/FormDetail?keyValue=' + keyValue + '&isDeltail=true',
                    width: '1000px',
                    height: '750px',
                    btn: null,
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })
            }
            else if (type == "MemberProcess") {
                dialogOpen({
                    id: 'Index',
                    title: '生产制程',
                    url: '/SteelMember/ProductionProcess/Index',
                    width: '1000px',
                    height: '750px',
                    btn: null,
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })
            }
            else if (type == "ProduceEquipment") {
                dialogOpen({
                    id: 'Index',
                    title: '生产设备',
                    url: '/SteelMember/ProduceEquipment/Index',
                    width: '1000px',
                    height: '750px',
                    btn: null,
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })
            }
            else if (type == "SafetyEquipment") {
                dialogOpen({
                    id: 'Index',
                    title: '安全设备',
                    url: '/SteelMember/SafetyEquipment/Index',
                    width: '1000px',
                    height: '750px',
                    btn: null,
                    callBack: function (iframeId) {
                        top.frames[iframeId].AcceptClick();
                    }
                })
            }
        }
    }
</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td>
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
            <a id="lr-details" class="btn btn-default" onclick="btn_details()"><i class="fa fa-list-alt"></i>详细</a>
        </div>
        <div class="btn-group">
            <a id="lr-category" class="btn btn-default" onclick="btn_category()"><i class="fa fa-tags"></i>&nbsp;公告类别</a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>